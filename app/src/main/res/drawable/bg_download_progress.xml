<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置背景色（黑色） -->


    <item android:id="@android:id/background">

        <shape>

            <!--<corners android:radius="@dimen/ws12dp"></corners>-->
            <solid android:color="#efefef"></solid>

        </shape>

    </item>

    <!-- 设置进度条颜色（白色） -->


    <item android:id="@android:id/progress">

        <clip>
            <shape>

                <gradient
                    android:angle="45"
                    android:endColor="#FDDF9F"
                    android:startColor="#FDDF9F"></gradient>
                <!--<corners android:radius="@dimen/ws4dp"></corners>-->

            </shape>

        </clip>

    </item>

</layer-list>