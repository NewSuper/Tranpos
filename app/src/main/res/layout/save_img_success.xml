<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_centerInParent="true"
        android:background="@drawable/bg_save_success"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@mipmap/bg_popup_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textColor="#333333"
                android:text="分享内容已生成"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_close"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/close_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_desc"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="您可以打开微信朋友圈，点击右上角 相机按钮，从相册连择此海报，并在 “这一刻想法…中长按，可直接粘贴标 题文案。"
            />
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/danger_icon"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容已复制，请前往粘贴"
                />
        </LinearLayout>
        <Button
            android:layout_marginBottom="15dp"
            android:id="@+id/confirm"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:textColor="@color/white"
            android:background="@mipmap/learn_over"
            android:text="去粘贴"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
    </LinearLayout>
</RelativeLayout>