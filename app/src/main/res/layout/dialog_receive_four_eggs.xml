<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_receive_eggs"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ws4dp"
            android:src="@mipmap/ic_eggs"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击开始按钮\n完成新手任务即可免费领取"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/ws4dp"
            android:layout_marginTop="@dimen/ws20dp"/>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="@dimen/ws180dp"
            android:layout_height="@dimen/ws36dp"
            android:text="马上开始"
            android:textColor="#88400b"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/ws15dp"
            android:background="@drawable/bg_receive"/>

    </LinearLayout>

</RelativeLayout>