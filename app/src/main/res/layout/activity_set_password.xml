<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include
            android:id="@+id/activity_login_bar"
            layout="@layout/module_include_title_bar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws0_5dp"
            android:background="@color/c_cccccc" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_login_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ws37_5dp"
            android:gravity="center_vertical"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_login_logo" />

            <TextView
                android:id="@+id/activity_login_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ws9dp"
                android:text="请设置密码"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/ws23dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_login_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ws19dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_login_sms_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录表示同意"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/ws14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_agreement"
                android:textColor="@color/c_FF9900"
                android:textSize="@dimen/ws14dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws50dp"
            android:layout_marginLeft="@dimen/ws40dp"
            android:layout_marginTop="@dimen/ws47dp"
            android:layout_marginRight="@dimen/ws40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/activity_set_password_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ws50dp"
                android:background="@null"
                android:paddingLeft="@dimen/ws22dp"
                android:singleLine="true"
                android:enabled="false"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_B2B2B2"
                android:textSize="@dimen/ws16dp" />

            <ImageView
                android:layout_width="@dimen/ws12dp"
                android:layout_height="@dimen/ws19dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_set_psw_phone" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws0_5dp"
            android:layout_marginLeft="@dimen/ws32dp"
            android:layout_marginRight="@dimen/ws32dp"
            android:background="@color/c_cccccc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws50dp"
            android:layout_marginLeft="@dimen/ws40dp"
            android:layout_marginTop="@dimen/ws10dp"
            android:layout_marginRight="@dimen/ws40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/activity_set_password_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ws50dp"
                android:background="@null"
                android:enabled="false"
                android:paddingLeft="@dimen/ws22dp"
                android:singleLine="true"
                android:text="******"
                android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZqwertyuioplkjhgfdsazxcvbnm，。、.！@#￥%"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_B2B2B2"
                android:textSize="@dimen/ws16dp" />

            <ImageView
                android:layout_width="@dimen/ws12dp"
                android:layout_height="@dimen/ws19dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_set_psw_lock" />

            <TextView
                android:id="@+id/activity_set_password_code_chage"
                android:layout_width="@dimen/ws56dp"
                android:layout_height="@dimen/ws25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shap_line_ff6600_round_100"
                android:gravity="center"
                android:text="修改"
                android:textColor="@color/c_ff6600"
                android:textSize="@dimen/ws14dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws0_5dp"
            android:layout_marginLeft="@dimen/ws32dp"
            android:layout_marginRight="@dimen/ws32dp"
            android:background="@color/c_cccccc" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ws39dp"
            android:layout_marginTop="@dimen/ws19dp"
            android:text="默认密码为手机后6位数\n为了您的账户安全，请及时修改密码"
            android:textColor="@color/c_ff3300"
            android:textSize="@dimen/ws13dp" />

        <TextView
            android:id="@+id/activity_set_password_commit"
            android:layout_width="@dimen/ws312dp"
            android:layout_height="@dimen/ws47dp"
            android:layout_marginTop="@dimen/ws25dp"
            android:background="@drawable/shap_bg_ed6b2c_round_100"
            android:gravity="center"
            android:text="确认设置"
            android:textColor="@color/white"
            android:textSize="@dimen/ws17dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/ws32dp"
                android:layout_marginRight="@dimen/ws30dp"
                android:layout_marginBottom="@dimen/ws93dp">

                <View
                    android:layout_width="@dimen/ws100dp"
                    android:layout_height="@dimen/ws1dp"
                    android:layout_centerVertical="true"
                    android:background="@color/c_cccccc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="其他登录方式"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/ws14dp" />

                <View
                    android:layout_width="@dimen/ws100dp"
                    android:layout_height="@dimen/ws1dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/c_cccccc" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ws50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/ws14dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/ws0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_login_wx"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/activity_set_password_qq"
                    android:layout_width="@dimen/ws0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_login_qq" />

                <ImageView
                    android:layout_width="@dimen/ws0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_login_sina"
                    android:visibility="invisible" />


                <ImageView
                    android:layout_width="@dimen/ws0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/umeng_socialize_ding"
                    android:visibility="gone" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>
