<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_today_hot_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ws15dp"
        android:text="实时更新于00:57"
        android:drawablePadding="@dimen/ws8dp"
        android:drawableRight="@mipmap/icon_today_hot_time"
        android:textSize="@dimen/ws18dp"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="@id/iv_title"
        app:layout_constraintBottom_toBottomOf="@id/iv_title"
        app:layout_constraintLeft_toRightOf="@id/iv_title"/>

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="173dp"
        android:layout_height="152dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/iv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageView
        android:id="@+id/iv_mask"
        android:layout_width="173dp"
        android:layout_height="152dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:background="@mipmap/bg_mask_hotpoint"
        app:layout_constraintTop_toBottomOf="@id/iv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_comment_num_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12dp"
        android:textColor="#C0C0C0"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_pic"
        app:layout_constraintBottom_toBottomOf="@id/iv_pic"/>

    <TextView
        android:id="@+id/tv_title_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:maxLines="2"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="3dp"
        android:textColor="#ffffff"
        android:textSize="@dimen/content_middle"
        android:ellipsize="end"
        app:layout_constraintRight_toRightOf="@id/iv_pic"
        app:layout_constraintLeft_toLeftOf="@id/iv_pic"
        app:layout_constraintBottom_toTopOf="@id/tv_comment_num_1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_title"
        app:layout_constraintLeft_toRightOf="@id/iv_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="2"
                android:textColor="#222222"
                android:textSize="@dimen/content_middle"
                android:ellipsize="end"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_comment_num_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12dp"
                android:textColor="#666666"/>

        </LinearLayout>

        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ebebeb"/>

        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_title_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="2"
                android:textColor="#222222"
                android:textSize="@dimen/content_middle"
                android:ellipsize="end"
                app:layout_constraintRight_toRightOf="@id/iv_pic"
                app:layout_constraintLeft_toLeftOf="@id/iv_pic"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_comment_num_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12dp"
                android:textColor="#666666"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>