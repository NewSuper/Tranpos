<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws160dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/ws95dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ws10dp"
            android:layout_marginTop="@dimen/ws10dp"
            android:layout_marginBottom="@dimen/ws10dp">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/ws10dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/ws10dp"
                android:text="狮子王"
                android:textColor="#333333"
                android:textSize="@dimen/ws15dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ws10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="高清"
                    android:textColor="@color/app_text2"
                    android:textSize="@dimen/app_text2" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ws4dp"
                    android:layout_marginRight="@dimen/ws10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="动作"
                    android:textColor="@color/app_text2"
                    android:textSize="@dimen/app_text2" />

                <TextView
                    android:id="@+id/tv_playnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ws4dp"
                    android:layout_marginRight="@dimen/ws10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="播放量"
                    android:textColor="@color/app_text2"
                    android:textSize="@dimen/app_text2" />

            </LinearLayout>
            
            <Button
                android:id="@+id/bt"
                android:layout_width="@dimen/ws75dp"
                android:layout_height="@dimen/ws25dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_searhmovieplay_bt"
                android:text="立即播放"
                android:textColor="@color/app_white"
                android:textSize="@dimen/ws13dp"/>

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#efefef" />

</LinearLayout>