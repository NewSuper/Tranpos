<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_shop_sort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/text_color_33"
            android:text="综合排序" />

        <ImageView
            android:id="@+id/iv_shop_sort"
            android:layout_width="8dp"
            android:layout_height="5dp"
            android:layout_marginLeft="6dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_xiala_blark" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_shop_sale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/text_color_66"
            android:text="销量" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_shop_dis"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/text_color_66"
            android:text="距离" />
        <View
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_shop_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="@color/text_color_66"
                android:text="筛选" />
            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/shape_filter_count"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:visibility="invisible"
                android:text="1"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_shop_screen"
            android:layout_width="8dp"
            android:layout_height="5dp"
            android:layout_marginLeft="6dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_xiala_gray" />
    </LinearLayout>
    <com.newsuper.t.consumer.widget.defineTopView.WGridView
        android:id="@+id/gv_filter"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="30dp"
        android:horizontalSpacing="10dp"
        android:numColumns="4"/>

</LinearLayout>
