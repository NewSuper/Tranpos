<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:fadingEdge="none"
    android:overScrollMode="never"
    android:background="#f5f5f5">
    <com.newsuper.t.consumer.widget.LimitScrollViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="51dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clipChildren="false"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffd6d6d6"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/ll_tab_top"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_tab_top"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/tab_home_s2x"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_tab_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="11sp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/text_red_f8"
                    android:text="首页"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_tab_publish"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:layout_marginTop="-20dp"
                android:gravity="center|left"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_tab_publish"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@mipmap/tab_publish_n2x"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_tab_publish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="11sp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/tab_normal"
                    android:text="发布"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_tab_my_publish"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_tab_my_publish"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/tab_my_publish_n2x"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_tab_my_publish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="11sp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/tab_normal"
                    android:text="我的"/>
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>
