<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:background="@drawable/shape_goods_group_bg">
        <RelativeLayout
            android:id="@+id/rl_pic"
            android:layout_width="match_parent"
            android:layout_height="172dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/common_def_food"
                app:riv_oval="false" />
            <TextView
                android:id="@+id/tv_huodong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_huodong_label"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:text="今日特价"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:visibility="visible" />
            <LinearLayout
                android:id="@+id/ll_goods_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#80ffffff"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/iv_goods_status"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/icon_sale_out_middle"/>

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_pic"
            android:layout_marginTop="6dp"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:text="迷你花卷寿司"
            android:textColor="@color/text_color_33"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="4dp"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="迷你花卷寿司"
            android:textColor="@color/text_color_99"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_des"
            android:layout_marginTop="4dp"
            android:paddingLeft="6dp"
            android:text="已售100"
            android:textColor="@color/text_color_99"
            android:textSize="12sp"/>
        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_below="@+id/tv_sale"
            android:layout_marginTop="4dp"
            android:paddingLeft="6dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvPriceFu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:textColor="#FF5556"
                android:text="￥"
                android:textSize="11sp"/>
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#FF5556"
                android:text="100"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvQi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:textColor="#999999"
                android:textSize="10sp"
                android:text="起"
                android:visibility="visible" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/tv_limit"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#ff9027"
                android:gravity="center"
                android:text="商品限购"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <LinearLayout
                android:id="@+id/ll_edit_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/llMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="6dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/icon_reduce_goods"
                        android:visibility="visible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:text="1"
                    android:textColor="@color/text_color_33"
                    android:textSize="13sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/llAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/icon_reduce_goods" />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_select_nature"
                android:layout_width="50dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:layout_marginRight="6dp"
                android:visibility="visible">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_cart_wei_count"
                    android:text="选规格"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/tvShowCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/circle_red_kongxin"
                    android:gravity="center"
                    android:textColor="@color/theme_red"
                    android:textSize="8sp"
                    android:visibility="visible" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_tip"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@mipmap/icon_wenhao"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/vv_diviver"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>
