<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/activity_verification_code_bar"
            layout="@layout/module_include_title_bar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws0_5dp"
            android:background="@color/c_cccccc" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ws15dp"
            android:layout_marginTop="@dimen/ws26dp"
            android:text="为什么收不到验证码短信？"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/ws17sp"

            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ws15dp"
            android:layout_marginTop="@dimen/ws18dp"
            android:text="如果手机号码可正常使用，但一直无法正常收到发出的验证码短信，我们建议："
            android:textColor="@color/c_333333"
            android:textSize="@dimen/ws15sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ws15dp"
            android:layout_marginTop="@dimen/ws20dp"
            android:lineSpacingExtra="@dimen/ws15dp"
            android:text="1）检查手机是否启用了短信拦截；\n2）检查短信收件箱是否需要清理；\n3）部分手机由于所在网络问题，可以尝试重启以及重装；\n4）所在地区信号可能不稳定，需要等待一段时间，或联系当地运营商查询"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/ws14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ws15dp"
            android:layout_marginTop="@dimen/ws27dp"
            android:text="若使用以上办法仍无法正常获取，或验证的手机号已不可用，请向客服反馈"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/ws15sp" />

        <TextView
            android:id="@+id/activity_verification_code_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws47dp"
            android:layout_marginLeft="@dimen/ws32dp"
            android:layout_marginTop="@dimen/ws31dp"
            android:layout_marginRight="@dimen/ws32dp"
            android:background="@drawable/shap_bg_ed6b2c_round_100"
            android:gravity="center"
            android:text="向客服反馈"
            android:textColor="@color/white"
            android:textSize="@dimen/ws17sp" />
    </LinearLayout>
</layout>
