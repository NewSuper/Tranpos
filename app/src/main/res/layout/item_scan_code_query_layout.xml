<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_73"
    app:cardCornerRadius="@dimen/dp_3"
    app:cardElevation="@dimen/dp_0"
    app:cardBackgroundColor="@color/white">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_42"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/dp_14"/>

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="刺猬阿甘小米锅巴(原味)"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_77"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_202020"/>
        <TextView
            android:id="@+id/tv_product_sale_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="￥19.90"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_77"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_2F2F2F"/>
        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_vip_tag"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_13"
            app:layout_constraintLeft_toRightOf="@id/tv_product_sale_price"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_12"
            android:src="@mipmap/ic_vip"/>
        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_product_origin_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_vip_tag"
            tools:text="￥23.90"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_12"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_ACACAC"/>

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="小计￥19.90"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_FF8A00"
            android:layout_marginBottom="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_139"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_8">
            <ImageView
                android:id="@+id/iv_sub"
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:src="@mipmap/ic_sub_num"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginRight="@dimen/dp_9"
                android:textColor="@color/color_2F2F2F"
                android:textSize="@dimen/sp_16"/>
            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="@dimen/dp_21"
                android:layout_height="@dimen/dp_21"
                android:src="@mipmap/ic_add_num"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_12"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_item_delete"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>