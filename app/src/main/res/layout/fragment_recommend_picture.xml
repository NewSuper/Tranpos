<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragment_recommend_picture_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ws25dp"
            android:paddingLeft="@dimen/ws14dp"
            android:paddingTop="@dimen/ws18dp"
            android:paddingRight="@dimen/ws14dp"
            android:paddingBottom="@dimen/ws18dp"
            android:src="@mipmap/icon_close" />

        <TextView
            android:id="@+id/fragment_recommend_picture_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ws25dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/ws79dp"
            android:paddingTop="@dimen/ws18dp"
            android:paddingRight="@dimen/ws79dp"
            android:paddingBottom="@dimen/ws10dp"
            android:text="图片推荐"
            android:textColor="@color/white"
            android:textSize="@dimen/ws16sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_recommend_picture_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/fragment_recommend_picture_title"
            android:layout_marginTop="@dimen/ws30dp">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</layout>

