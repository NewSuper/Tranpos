<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

        <RelativeLayout
            android:id="@+id/rl_circle_reward"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="210dp"
            android:background="@mipmap/bg_read_acticle_circle"
            android:padding="3dp"
            android:visibility="gone"
            >

            <com.newsuper.t.juejinbao.view.CirclePercentView
                android:layout_centerInParent="true"
                android:id="@+id/circle_percent_progress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                app:circleBgColor="@color/c_fff7f7"
                app:circleIsGradient="false"
                app:circleProgressColor="@color/red_500" />

            <TextView
                android:textSize="@dimen/ws10dp"
                android:id="@+id/tv_circle_inner_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@mipmap/ic_arcticle_circle_reward"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/c_F45546"
                />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/activity_play_small_video_guide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#70000000">

            <LinearLayout
                android:id="@+id/activity_play_small_video_operation_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/ws54dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/ws49dp"
                    android:layout_height="@dimen/ws49_5dp"
                    android:src="@mipmap/icon_operation_slide" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ws6_5dp"
                    android:text="上滑弹出评论"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ws14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_play_small_video_operation_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/ws170_5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/ws49dp"
                    android:layout_height="@dimen/ws49_5dp"
                    android:src="@mipmap/icon_operation_down" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ws6_5dp"
                    android:text="下滑返回视频列表"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ws14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_play_small_video_operation_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ws13dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/ws49dp"
                    android:layout_height="@dimen/ws49_5dp"
                    android:src="@mipmap/icon_operation_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ws6_5dp"
                    android:text="左滑切换下一个视频"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ws14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_play_small_video_operation_fore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/ws185dp"
                android:layout_marginRight="@dimen/ws27_5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/ws49dp"
                    android:layout_height="@dimen/ws49_5dp"
                    android:src="@mipmap/icon_operation_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ws6_5dp"
                    android:text="右滑切换上一个视频"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ws14sp" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</layout>