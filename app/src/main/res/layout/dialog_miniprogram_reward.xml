<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_mini_program_reward"
        />

    <TextView
        android:id="@+id/tv_reward_count"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_auto_convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- -元"
        android:textSize="25dp"
        android:textColor="@color/c_FFE5CC"
        />

    <TextView
        android:id="@+id/tv_auto_convert"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已为您兑换12个原始股（掘金宝）"
        android:layout_marginBottom="24dp"
        android:textColor="@color/c_FFE5CC"
        android:textSize="12dp"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_mid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上市后该原始股（掘金宝）"
        android:textColor="@color/c_D94038"
        android:textSize="11dp"
        />

    <TextView
        android:id="@+id/tv_worth"
        android:textColor="@color/c_D94038"
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="价值将有- -元"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mid" />

    <TextView
        android:id="@+id/tv_how_much_worth"
        android:gravity="center"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_check_account"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="原始股值多少钱？"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bg_worth_jjb"
        android:textColor="@color/c_D36C2F"
        />

    <TextView
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:gravity="center"
        android:id="@+id/tv_check_account"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/img_bg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="查看账户"
        android:background="@drawable/bg_check_account"
        android:textColor="@color/c_FFDD99"
        />

    <ImageView
        android:id="@+id/img_close"
        android:padding="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_mini_dialog_close"
        />


</android.support.constraint.ConstraintLayout>
