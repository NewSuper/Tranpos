<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f5"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <com.newsuper.t.consumer.widget.CustomToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:visibility="visible"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/shape_search_store_gray"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="15dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_sousuo" />

                <EditText
                    android:id="@+id/edt_search"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="请输入关键字"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/text_color_33"
                    android:textColorHint="@color/text_color_99"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/iv_clear"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/search_edt_close" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索"
                    android:textColor="@color/theme_red"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="true"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/ll_header"
        android:layout_marginBottom="45dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clipChildren="false"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_manjian"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#FFE6CF"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="12sp"
            android:visibility="invisible" />
        <LinearLayout
            android:id="@+id/ll_cart"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#212121"
            android:clipChildren="false"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:layout_marginLeft="70dp"
                android:textSize="15sp"
                android:text="￥"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tvCost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:textSize="23sp"
                android:text="0"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tvTips"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:gravity="center"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/tvSubmit"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="#df5458"
                android:clickable="true"
                android:gravity="center"
                android:text="选好了"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/show_cart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp">
        <ImageView
            android:id="@+id/imgCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_shopping_cart_grey" />
        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/circle_red"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:visibility="gone"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_load_fail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:visibility="gone">
        <include layout="@layout/layout_load_fail" />
    </LinearLayout>
</RelativeLayout>
