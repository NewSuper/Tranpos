<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_goods_wei"
    android:paddingBottom="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="355dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:riv_corner_radius_bottom_left="0dp"
            app:riv_corner_radius_bottom_right="0dp"
            app:riv_corner_radius_top_left="2dp"
            app:riv_corner_radius_top_right="2dp"
            app:riv_oval="false" />
        <LinearLayout
            android:id="@+id/ll_sale_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7Fffffff"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/icon_sale_out_big"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_stop_sale"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7Fffffff"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/icon_stop_sale_big"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="迷你花卷寿司"
            android:textColor="@color/text_color_33"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="2dp"
                android:textColor="#f87a7c"
                android:text="￥"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="#f87a7c"
                android:layout_marginBottom="1dp"
                android:text="100"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tvQi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_marginLeft="2dp"
                android:text="起"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:textColor="#999999"
                android:textSize="14sp"
                android:text="/份"
                android:visibility="visible"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_limit"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="#ff9027"
                android:gravity="center"
                android:text="商品限购"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <LinearLayout
                android:id="@+id/llTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true"
                android:visibility="visible">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:background="@mipmap/icon_wenhao"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_edit_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/llMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@mipmap/icon_jian"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:text="1"
                android:textColor="#676767"
                android:textSize="16sp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/llAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@mipmap/icon_jiagou" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_select_nature"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:visibility="visible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_cart"
                android:text="选规格"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tvShowCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/circle_red_kongxin"
                android:gravity="center"
                android:textColor="@color/theme_red"
                android:textSize="10sp"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_min_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:text="2"
        android:textColor="@color/theme_red"
        android:textSize="12sp"/>
</LinearLayout>