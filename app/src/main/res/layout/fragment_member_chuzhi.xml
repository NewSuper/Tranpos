<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginLeft="@dimen/dp_5"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_19"
                            android:layout_marginTop="@dimen/dp_14_5"
                            android:text="储值信息"
                            android:textColor="@color/color_3"
                            android:textSize="@dimen/sp_10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_23"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|left"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dp_37">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥888"
                                android:textColor="@color/c_1EC1B3"
                                android:textSize="@dimen/sp_10" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_7"
                                android:text="卡余额"
                                android:textColor="@color/color_3"
                                android:textSize="@dimen/sp_8" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|left"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dp_19">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥888"
                                android:textColor="@color/c_1EC1B3"
                                android:textSize="@dimen/sp_10" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_7"
                                android:text="累计充值金额"
                                android:textColor="@color/color_3"
                                android:textSize="@dimen/sp_8" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|left"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dp_19">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥888"
                                android:textColor="@color/c_1EC1B3"
                                android:textSize="@dimen/sp_10" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_7"
                                android:text="上次充值日期"
                                android:textColor="@color/color_3"
                                android:textSize="@dimen/sp_8" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_22">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_22"
                            android:text="金额充值"
                            android:textColor="@color/color_3"
                            android:textSize="@dimen/sp_10" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:orientation="vertical">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_67"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_marginRight="@dimen/dp_75"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/shape_white_line_r2"
                            android:orientation="vertical">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:hint="输入其他充值金额"
                                android:paddingLeft="@dimen/dp_9"
                                android:paddingTop="@dimen/dp_9"
                                android:paddingBottom="@dimen/dp_9"
                                android:textColorHint="@color/color_6"
                                android:textSize="@dimen/sp_10" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:layout_weight="1"
                            android:background="@drawable/shape_white_line_r2"
                            android:orientation="vertical">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:paddingLeft="@dimen/dp_9"
                                android:paddingTop="@dimen/dp_9"
                                android:paddingBottom="@dimen/dp_9"
                                android:hint="输入赠送金额"
                                android:textColorHint="@color/color_6"
                                android:textSize="@dimen/sp_10" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:orientation="horizontal">
                            <Button
                                android:layout_width="@dimen/dp_77"
                                android:layout_height="@dimen/dp_28"
                                android:text="充值付款:"
                                android:background="@drawable/shape_shadow_recharge"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/c_202020"
                                android:layout_marginRight="@dimen/dp_9"/>
                            <LinearLayout
                                android:layout_width="77dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center"
                                android:background="@drawable/shape_f1fefd_3dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/dp_16"
                                    android:layout_height="@dimen/dp_16"
                                    android:src="@mipmap/paysuccess" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/dp_4_5"
                                    android:text="人民币"
                                    android:textColor="@color/c_1EC1B3"
                                    android:textSize="@dimen/sp_13" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_online"
                                android:layout_width="77dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dp_6"
                                android:layout_marginRight="@dimen/dp_16"
                                android:background="@drawable/shape_f1f4fd_3dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="@dimen/dp_27"
                                    android:layout_height="@dimen/dp_23"
                                    android:src="@mipmap/wechat" />

                                <ImageView
                                    android:layout_width="@dimen/dp_23"
                                    android:layout_height="@dimen/dp_23"
                                    android:layout_marginLeft="@dimen/dp_14"
                                    android:src="@mipmap/alipay" />


                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

