<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_white_corner_bg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_gravity="center"
        android:textColor="@color/text_color_33"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="温馨提示"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_f5"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/text_color_66"
        android:padding="16dp"
        android:textSize="13sp"
        android:text="为帮助您安全使用产品和服务，在您同意并授权的基础上我们可能会收集你的交易信息，位置信息，设备信息等。请你认证阅读《用户服务协议》及《隐私政策》全部条款，您同意并接受全部条款后再开始使用我们的服务。"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/white_f5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="不同意"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/text_color_33"
            android:layout_height="match_parent" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white_f5"/>
        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="同意并继续"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/theme_red"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
