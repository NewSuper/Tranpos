<?xml version="1.0" encoding="utf-8"?>

<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">


    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws48dp">

        <!--返回-->
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/ws8dp"
                android:layout_height="@dimen/ws16dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/ws20dp"
                android:layout_marginRight="@dimen/ws20dp"
                android:background="@mipmap/backblack" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/ws150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="播放教程"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#333"
            android:textSize="@dimen/app_text" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#efefef"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="每次遇到视频播放不出来，是不是不知所措？让小编来手把手教你如何快速观影吧"
                android:textSize="@dimen/ws16dp"
                android:textColor="#333"
                android:layout_marginTop="@dimen/ws18dp"
                android:layout_marginRight="@dimen/ws18dp"
                android:layout_marginLeft="@dimen/ws18dp"
                android:lineSpacingExtra="@dimen/ws10dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_marginTop="@dimen/ws18dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/ws241dp"
                android:layout_height="wrap_content"
                android:background="@mipmap/moviehelp1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="第一步\n1、点击返回按钮，返回影视详情页；"
                android:textSize="@dimen/ws16dp"
                android:textColor="#333"
                android:layout_marginTop="@dimen/ws18dp"
                android:layout_marginRight="@dimen/ws18dp"
                android:layout_marginLeft="@dimen/ws18dp"
                android:lineSpacingExtra="@dimen/ws10dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_marginTop="@dimen/ws18dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/ws174dp"
                android:layout_height="wrap_content"
                android:background="@mipmap/moviehelp2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2、切换播放源试试！如果还是没有播放源的话，请看第二步；"
                android:textSize="@dimen/ws16dp"
                android:textColor="#333"
                android:layout_marginTop="@dimen/ws18dp"
                android:layout_marginRight="@dimen/ws18dp"
                android:layout_marginLeft="@dimen/ws18dp"
                android:lineSpacingExtra="@dimen/ws10dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_marginTop="@dimen/ws18dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/ws308dp"
                android:layout_height="wrap_content"
                android:background="@mipmap/moviehelp3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="第二步\n1、点击返回按钮；"
                android:textSize="@dimen/ws16dp"
                android:textColor="#333"
                android:layout_marginTop="@dimen/ws18dp"
                android:layout_marginRight="@dimen/ws18dp"
                android:layout_marginLeft="@dimen/ws18dp"
                android:lineSpacingExtra="@dimen/ws10dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_marginTop="@dimen/ws18dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/ws306dp"
                android:layout_height="wrap_content"
                android:background="@mipmap/moviehelp4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2、 可进行左右切换影院查看播放源，还是没对应影视源的话 ，小编要放大招了，请看第三步！"
                android:textSize="@dimen/ws16dp"
                android:textColor="#333"
                android:layout_marginTop="@dimen/ws18dp"
                android:layout_marginRight="@dimen/ws18dp"
                android:layout_marginLeft="@dimen/ws18dp"
                android:lineSpacingExtra="@dimen/ws10dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_marginTop="@dimen/ws18dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/ws306dp"
                android:layout_height="wrap_content"
                android:background="@mipmap/moviehelp5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="第三步:\n1、点击如图所示，向左滑动，切换全网搜索；"
                android:textSize="@dimen/ws16dp"
                android:textColor="#333"
                android:layout_marginTop="@dimen/ws18dp"
                android:layout_marginRight="@dimen/ws18dp"
                android:layout_marginLeft="@dimen/ws18dp"
                android:lineSpacingExtra="@dimen/ws10dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_marginTop="@dimen/ws18dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/ws308dp"
                android:layout_height="wrap_content"
                android:background="@mipmap/moviehelp6"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2、开始全网搜索吧！ 片源尽享其中 ；"
                android:textSize="@dimen/ws16dp"
                android:textColor="#333"
                android:layout_marginTop="@dimen/ws18dp"
                android:layout_marginRight="@dimen/ws18dp"
                android:layout_marginLeft="@dimen/ws18dp"
                android:lineSpacingExtra="@dimen/ws10dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_marginTop="@dimen/ws18dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/ws308dp"
                android:layout_height="wrap_content"
                android:background="@mipmap/moviehelp7"
                android:layout_marginBottom="@dimen/ws18dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
</layout>
