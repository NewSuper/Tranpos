<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ws6dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="@dimen/ws105dp"
            android:layout_height="@dimen/ws105dp"
            android:src="@mipmap/ic_music_default_bg"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经典老歌"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/ws14dp"
            android:layout_marginTop="@dimen/ws5dp"/>

    </LinearLayout>

</LinearLayout>