<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:overScrollMode="never"
    android:background="@color/bg_F5">
    <com.newsuper.t.consumer.widget.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="50dp"
        android:fadingEdge="none"
        android:overScrollMode="never"
       android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#f5f5f5"
                android:visibility="visible">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:visibility="visible">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_shoufei_2x"/>

                    <TextView
                        android:id="@+id/tv_service_title"
                        style="@style/text_bangmai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="收费信息" />

                    <TextView
                        android:id="@+id/tv_service_select"
                        style="@style/text_bangmai"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_67"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="(请在下方选项中选择一个服务项)"/>
                </LinearLayout>
                <com.newsuper.t.consumer.widget.defineTopView.WGridView
                    android:id="@+id/grideview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="@android:color/transparent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="10dp"
                    android:horizontalSpacing = "12dp"
                    android:verticalSpacing="12dp"
                    android:numColumns="3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="horizontal"
                android:background="@color/white">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_yaoqiu_2x"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/text_color_33"
                    android:layout_marginLeft="5dp"
                    android:gravity="center|left"
                    android:textSize="16sp"
                    android:text="请在下方填写您的服务要求"
                    android:background="@color/white"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f5f5f5"/>
            <com.newsuper.t.consumer.widget.ListViewForScrollView
                android:id="@+id/custom_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="@color/white"
                android:dividerHeight="0dp"/>
            <LinearLayout
                android:id="@+id/ll_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5f5f5"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_bangmai"
                        android:text="小费        "/>
                    <EditText
                        android:id="@+id/edt_small_fee"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:inputType="numberSigned"
                        android:numeric="integer"
                        android:gravity="left"
                        style="@style/text_bangmai"
                        android:textColorHint="#c5c5c5"
                        android:hint="给师傅一个奖励吧"
                        android:background="@null"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="元"
                        android:textColor="@color/text_color_33"
                        android:textSize="14sp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="#f5f5f5"/>
                <LinearLayout
                    android:id="@+id/ll_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_bangmai"
                        android:text="优惠        "/>
                    <TextView
                        android:id="@+id/tv_coupon"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="24dp"
                        android:textColor="@color/text_color_33"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:paddingRight="10dp"
                        android:textSize="15sp"
                        android:textColorHint="#c5c5c5"
                        android:hint="暂无可用优惠券"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/shop_right"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="#f5f5f5"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#f5f5f5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/text_bangmai"
                            android:text="联系地址"/>
                        <TextView
                            android:id="@+id/tv_address"
                            style="@style/text_bangmai_address"
                            android:layout_width="match_parent"
                            android:gravity="center|left"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="24dp"
                            android:hint="联系地址"
                            android:textColorHint="#c5c5c5" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_person"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_below="@+id/tv_address"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:visibility="visible">
                        <TextView
                            style="@style/text_bangmai_address"
                            android:layout_width="wrap_content"
                            android:gravity="center|left"
                            android:layout_height="match_parent"
                            android:hint="联系地址"
                            android:textColorHint="#c5c5c5"
                            android:visibility="invisible"/>
                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/text_bangmai_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="15dp"
                            android:text="姓名" />
                        <TextView
                            android:id="@+id/tv_phone"
                            style="@style/text_bangmai_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电话" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/bg_eb"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"/>
                <TextView
                    android:id="@+id/tv_address_list"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="地址簿"
                    android:textColor="@color/theme_red"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e7e7e7"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_over_dis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_color_99"
                    android:textSize="14sp"
                    android:gravity="center|left"
                    android:text="跑腿距离已超出最大范围，无法下单，请重新选择地址！"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="金额："/>
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="#f87a7c"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text=" 元"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="1dp"/>
                <ImageView
                    android:id="@+id/iv_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_wenhao_2x"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_commit_order"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="下 单"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:gravity="center"
                android:background="@color/tab_normal"/>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/ll_fail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:visibility="gone">
        <include layout="@layout/layout_load_fail" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_no_login"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="您还未登录呢！"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/text_color_57"/>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="去登录吧"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:background="@drawable/shape_btn_reload"
            />
    </LinearLayout>
</RelativeLayout>
