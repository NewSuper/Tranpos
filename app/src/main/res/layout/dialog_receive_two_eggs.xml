<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="#000000" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_clicked"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ws230dp"/>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="转满一圈后就可以\n获得鸡蛋奖励喲！"
        android:lineSpacingExtra="@dimen/ws2dp"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/ws175dp"/>

    <RelativeLayout
        android:id="@+id/rl_circle_reward"
        android:layout_width="@dimen/ws64dp"
        android:layout_height="@dimen/ws64dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/ws14dp"
        android:layout_marginLeft="@dimen/ws14dp"
        android:layout_marginBottom="@dimen/ws167dp"
        android:background="@mipmap/bg_read_acticle_circle"
        android:padding="3dp">

        <com.juejinchain.android.view.CirclePercentView
            android:id="@+id/progress"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/ws50dp"
            android:layout_height="@dimen/ws50dp"
            android:layout_gravity="center_horizontal"
            app:circleBgColor="@color/c_fff7f7"
            app:circleIsGradient="true"
            app:circleStartColor="@color/yellow_general_btn"
            app:circleProgressMax="1000"
            app:circleEndColor="@color/red_500"
            app:circleProgressColor="@color/red_500" />

        <ImageView
            android:layout_width="@dimen/ws32dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_egg"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</RelativeLayout>