<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Ratingbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <RelativeLayout
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_shop_list">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_store_logo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/store_logo_default" />
                <ImageView
                    android:id="@+id/iv_shop_status"
                    android:layout_width="15dp"
                    android:layout_height="7dp"
                    android:src="@mipmap/storelist_icon_open"
                    android:layout_alignParentTop="true"
                    android:visibility="invisible" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/label_yellow"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_marginRight="5dp"
                        android:text="品牌"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/tv_store_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="店铺名称"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ll_shop_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_sales_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="已售200单"
                            android:textColor="@color/text_color_67"
                            android:textSize="10sp" />
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="起送价￥20  |  配送费￥4"
                            android:textColor="@color/text_color_67"
                            android:textSize="10sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_shop_list_tip"
                        android:layout_gravity="center"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/ll_yu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="现在预定"
                            android:textColor="@color/white"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:paddingRight="3dp"
                            android:paddingLeft="5dp"
                            android:textSize="12sp"
                            android:background="@color/theme_red"
                            android:visibility="visible"/>
                        <TextView
                            android:id="@+id/tv_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:paddingRight="5dp"
                            android:paddingLeft="3dp"
                            android:text="00:00送达"
                            android:textColor="@color/theme_red"
                            android:textSize="12sp"
                            android:visibility="visible"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_work_time"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        android:background="@drawable/shape_work_time"
                        android:visibility="gone"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/white" />
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_67"
                        android:layout_gravity="center"
                        android:textSize="11sp"
                        android:layout_marginRight="5dp"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="2.1km"
                        android:textColor="@color/text_color_67"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/tv_special_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_text_store_list_notice"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:paddingRight="4dp"
                        android:paddingLeft="4dp"
                        android:text="乐外卖专送"
                        android:textColor="@color/white"
                        android:textSize="9sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_gonggao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="3dp"
                    android:orientation="horizontal"
                    android:background="#FFF6ED"
                    android:visibility="gone">
                    <com.newsuper.t.consumer.widget.NoticeTextView
                        android:id="@+id/tv_gonggao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF770C"
                        android:textSize="10sp"
                        android:ellipsize="end"
                        android:maxLines="1"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <com.newsuper.t.consumer.widget.ActivityLabelLayout
                        android:id="@+id/ll_activity"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:horizontalSpace="10dp"
                        app:verticalSpace="5dp"/>
                    <ImageView
                        android:id="@+id/iv_more"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="top"
                        android:src="@mipmap/push"
                        android:visibility="visible"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <com.newsuper.t.consumer.widget.ListViewForScrollView
            android:id="@+id/lv_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:divider="@color/white"
            android:dividerHeight="0dp"
            android:visibility="visible"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ebebeb"/>
        <LinearLayout
            android:id="@+id/ll_store_publicity"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="查看"
                android:textColor="@color/text_color_33"
                android:textSize="11sp" />
            <ImageView
                android:id="@+id/iv_food"
                android:layout_width="9dp"
                android:layout_height="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:src="@mipmap/push"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ebebeb"/>
    </LinearLayout>
</RelativeLayout>
