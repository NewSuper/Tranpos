<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num_7"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_24"
            android:layout_weight="1"
            android:background="@mipmap/bg_short"
            android:gravity="center"
            android:tag="7"
            android:text="7"
            android:textColor="@color/color_3"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_num_8"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_weight="1"
            android:background="@mipmap/bg_short"
            android:gravity="center"
            android:tag="8"
            android:text="8"
            android:textColor="@color/color_3"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_num_9"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_weight="1"
            android:background="@mipmap/bg_short"
            android:gravity="center"
            android:tag="9"
            android:text="9"
            android:textColor="@color/color_3"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num_4"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_24"
            android:layout_weight="1"
            android:background="@mipmap/bg_short"
            android:gravity="center"
            android:tag="4"
            android:text="4"
            android:textColor="@color/color_3"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_num_5"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_weight="1"
            android:background="@mipmap/bg_short"
            android:gravity="center"
            android:tag="5"
            android:text="5"
            android:textColor="@color/color_3"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_num_6"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_weight="1"
            android:background="@mipmap/bg_short"
            android:gravity="center"
            android:tag="6"
            android:text="6"
            android:textColor="@color/color_3"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_24"
            android:layout_weight="1"
            android:background="@mipmap/bg_short"
            android:gravity="center"
            android:tag="1"
            android:text="1"
            android:textColor="@color/color_3"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_num_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_weight="1"
            android:background="@mipmap/bg_short"
            android:gravity="center"
            android:tag="2"
            android:text="2"
            android:textColor="@color/color_3"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_num_3"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_weight="1"
            android:background="@mipmap/bg_short"
            android:gravity="center"
            android:tag="3"
            android:text="3"
            android:textColor="@color/color_3"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_24"
            android:layout_weight="1"
            android:background="@mipmap/bg_short"
            android:tag="-2">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="11dp"
                android:layout_gravity="center"
                android:src="@mipmap/keydel" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_num_0"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_weight="1"
            android:background="@mipmap/bg_short"
            android:gravity="center"
            android:tag="0"
            android:text="0"
            android:textColor="@color/color_3"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_23"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_weight="1"
            android:background="@drawable/shape_login_blue_btn"
            android:gravity="center"
            android:shadowColor="@color/c_1EC1B3"
            android:shadowDx="0"
            android:shadowDy="1"
            android:tag="-3"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>
</LinearLayout>