<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_16"
                android:scaleType="centerCrop"
                android:src="@mipmap/geren"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="哈哈"
                android:textColor="@color/c_202020"
                android:textSize="@dimen/sp_11"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_head"
                android:layout_marginTop="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_6"/>
            <TextView
                android:id="@+id/tv_vip_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="已成为会员3天"
                android:textColor="@color/c_202020"
                android:textSize="@dimen/sp_11"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_head"
                android:layout_marginTop="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_6"/>
            <ImageView
                android:id="@+id/iv_vip"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_12"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_member_vip"
                app:layout_constraintLeft_toRightOf="@+id/tv_name"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_25"/>
            <ImageView
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_12"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_member_plus"
                app:layout_constraintLeft_toRightOf="@+id/iv_vip"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_25"/>
            <com.newsuper.t.markert.view.RoundButton
                android:id="@+id/btn_edit"
                android:layout_width="@dimen/dp_53"
                android:layout_height="@dimen/dp_21"
                android:textColor="@color/white"
                android:text="编辑资料"
                android:textSize="@dimen/sp_10"
                app:btnCornerRadius="@dimen/dp_2"
                app:btn_is_gradient="true"
                app:btn_gradient_orientation="left_right"
                app:btn_gradient_colors="#21D4C5,#1EC1B3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_44"/>
            <com.newsuper.t.markert.view.RoundButton
                android:id="@+id/btn_card_manger"
                android:layout_width="@dimen/dp_53"
                android:layout_height="@dimen/dp_21"
                android:textColor="@color/white"
                android:text="卡管理"
                android:textSize="@dimen/sp_10"
                app:btnCornerRadius="@dimen/dp_2"
                app:btn_is_gradient="true"
                app:btn_gradient_orientation="left_right"
                app:btn_gradient_colors="#21D4C5,#1EC1B3"
                app:layout_constraintRight_toLeftOf="@id/btn_edit"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_12"/>
            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人标签："
                android:textSize="@dimen/sp_9"
                android:textColor="@color/c_202020"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_head"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_6"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintLeft_toRightOf="@id/tv_tag"
                app:layout_constraintTop_toBottomOf="@id/iv_head"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_4">
                <com.newsuper.t.markert.view.RoundButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_13"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_6"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_9"
                    android:text="爱音乐"
                    app:btnCornerRadius="stadium"
                    app:btn_normalSolidColor="@color/color_DCDCDC"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人信息"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/c_202020"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tag"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_34"/>
            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/c_202020"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_msg"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_15"/>
            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_female"
                app:layout_constraintTop_toBottomOf="@id/tv_msg"
                app:layout_constraintLeft_toRightOf="@id/tv_sex"
                android:layout_marginTop="@dimen/dp_18"/>
            <TextView
                android:id="@+id/tv_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="导    购：一沪"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/c_202020"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_msg"
                android:layout_marginRight="@dimen/dp_59"
                android:layout_marginTop="@dimen/dp_15"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintLeft_toRightOf="@id/iv_sex"
                app:layout_constraintRight_toLeftOf="@id/tv_sale"
                app:layout_constraintTop_toBottomOf="@id/tv_msg"
                android:layout_marginTop="@dimen/dp_15">
                <TextView
                    android:id="@+id/tv_card_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="卡状态：正常使用"
                    android:textSize="@dimen/sp_9"
                    android:textColor="@color/c_202020"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_state_ok"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_birthday_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生日："
                android:textSize="@dimen/sp_9"
                android:textColor="@color/c_202020"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_sex"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_10"/>
            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2020-09-09"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/c_202020"
                app:layout_constraintLeft_toRightOf="@id/tv_birthday_txt"
                app:layout_constraintTop_toBottomOf="@id/tv_sex"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_10"/>
            <TextView
                android:id="@+id/tv_phone_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话："
                android:textSize="@dimen/sp_9"
                android:textColor="@color/c_202020"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_birthday_txt"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_10"/>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12233555"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/c_202020"
                app:layout_constraintLeft_toRightOf="@+id/tv_phone_txt"
                app:layout_constraintTop_toBottomOf="@id/tv_birthday_txt"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_10"/>
            <TextView
                android:id="@+id/tv_psw_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码："
                android:textSize="@dimen/sp_9"
                android:textColor="@color/c_202020"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_phone_txt"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_10"/>
            <TextView
                android:id="@+id/tv_psw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="******"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/c_202020"
                app:layout_constraintLeft_toRightOf="@+id/tv_psw_txt"
                app:layout_constraintTop_toBottomOf="@id/tv_phone"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_10"/>
            <TextView
                android:id="@+id/tv_register_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册日期："
                android:textSize="@dimen/sp_9"
                android:textColor="@color/c_202020"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_psw_txt"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_10"/>
            <TextView
                android:id="@+id/tv_register_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2020-09-09"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/c_202020"
                app:layout_constraintLeft_toRightOf="@+id/tv_register_txt"
                app:layout_constraintTop_toBottomOf="@id/tv_psw_txt"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_10"/>
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="@color/color_F7F8FA"
                app:layout_constraintTop_toBottomOf="@id/tv_register_txt"
                android:layout_marginTop="@dimen/dp_20"/>
            <TextView
                android:id="@+id/tv_consume_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费详情"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/c_202020"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_15"/>
            <LinearLayout
                android:id="@+id/ll_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_24"
                app:layout_constraintTop_toBottomOf="@+id/tv_consume_txt">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_1FC1B3"
                    android:textSize="@dimen/sp_11"
                    tools:text="￥888"
                    android:layout_marginLeft="@dimen/dp_19"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_1FC1B3"
                    android:textSize="@dimen/sp_11"
                    tools:text="150笔"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_1FC1B3"
                    android:textSize="@dimen/sp_11"
                    tools:text="￥166"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_1FC1B3"
                    android:textSize="@dimen/sp_11"
                    tools:text="2020-06-11 "/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_1FC1B3"
                    android:textSize="@dimen/sp_11"
                    tools:text="10次 "/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_7"
                app:layout_constraintTop_toBottomOf="@+id/ll_money">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/c_202020"
                    android:textSize="@dimen/sp_9"
                    tools:text="消费总额"
                    android:layout_marginLeft="@dimen/dp_19"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/c_202020"
                    android:textSize="@dimen/sp_9"
                    tools:text="消费笔数"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/c_202020"
                    android:textSize="@dimen/sp_9"
                    tools:text="客单价 "/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/c_202020"
                    android:textSize="@dimen/sp_9"
                    tools:text="上次消费日期 "/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/c_202020"
                    android:textSize="@dimen/sp_9"
                    tools:text="月均消费次数"/>
            </LinearLayout>
            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="@color/color_F7F8FA"
                app:layout_constraintTop_toBottomOf="@id/ll_detail_title"
                android:layout_marginTop="@dimen/dp_25"/>
            <TextView
                android:id="@+id/tv_top5_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常购商品TOP5"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/c_202020"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line2"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_15"/>
            <android.support.v7.widget.RecyclerView
                app:layout_constraintTop_toBottomOf="@+id/tv_top5_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_11"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>