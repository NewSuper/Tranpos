<?xml version="1.0" encoding="utf-8"?>
<layout>

    <com.newsuper.t.juejinbao.view.photodrag.DragRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_drag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:fitsSystemWindows="true"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.newsuper.t.juejinbao.view.JzvdStdSmallVideo_withCache
                    android:layout_centerInParent="true"
                    android:id="@+id/model_activity_micro_video_jzvdPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.juejinchain.android.view.JzvdStdSmallVideo_withCache>

                <ImageView
                    android:id="@+id/model_activity_micro_video_jzvdPlayer_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

            </RelativeLayout>
        </FrameLayout>

        <ImageView
            android:id="@+id/model_activity_micro_video_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/ws14dp"
            android:paddingTop="@dimen/ws45dp"
            android:paddingRight="@dimen/ws14dp"
            android:paddingBottom="@dimen/ws18dp"
            android:src="@mipmap/icon_close" />


        <TextView
            android:id="@+id/model_activity_micro_video_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/ws16dp"
            android:layout_marginRight="@dimen/ws84dp"
            android:layout_marginBottom="@dimen/ws91dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="@dimen/ws14dp" />

        <LinearLayout
            android:id="@+id/model_activity_micro_video_user_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/ws16dp"
            android:layout_marginBottom="@dimen/ws50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/model_activity_micro_video_img_header"
                android:layout_width="@dimen/ws35dp"
                android:layout_height="@dimen/ws35dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/model_activity_micro_video_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/ws8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/ws13dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/model_activity_micro_video_make_about"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ws202dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/model_activity_micro_video_make_good_about"
                android:layout_width="@dimen/ws56dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/model_activity_micro_video_make_good_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_good" />

                <TextView
                    android:id="@+id/model_activity_micro_video_make_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ws11dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/model_activity_micro_video_make_comment_about"
                android:layout_width="@dimen/ws56dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_comments" />

                <TextView
                    android:id="@+id/model_activity_micro_video_make_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ws11dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_mei_video_drag_share"
                android:layout_width="@dimen/ws56dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ws11dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/model_activity_micro_video_edit_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/ws73dp"
            android:layout_marginBottom="@dimen/ws9dp">

            <ImageView
                android:id="@+id/model_activity_micro_video_edit_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/ws16dp"
                android:src="@mipmap/icon_back" />

            <TextView
                android:id="@+id/model_activity_micro_video_edit"
                style="@null"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ws34dp"
                android:layout_marginLeft="@dimen/ws7dp"
                android:layout_toRightOf="@+id/model_activity_micro_video_edit_icon"
                android:background="@drawable/shape_black_70000000_radius_100"
                android:drawableLeft="@mipmap/icon_editor"
                android:drawablePadding="@dimen/ws7dp"
                android:gravity="center_vertical"
                android:hint="写评论..."
                android:paddingLeft="@dimen/ws11dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/ws13dp" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fl_ad"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <!--<VideoView-->
            <!--android:id="@+id/fv_ad"-->

            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="#fff"></VideoView>-->
        </FrameLayout>
    </com.newsuper.t.juejinbao.view.photodrag.DragRelativeLayout>
</layout>
