<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_220"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_5dp"
        android:orientation="vertical">

        <include layout="@layout/item_dialog_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_14_5"
                    android:paddingTop="@dimen/dp_28_5"
                    android:text="现付金额："
                    android:textColor="#ff2f2f2f"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_nowPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_8"
                    android:textColor="#ffff1e00"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_28">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_28"
                    android:layout_marginLeft="@dimen/dp_8_5"
                    android:layout_marginRight="@dimen/dp_8_5"
                    android:background="@drawable/shape_1ec1b3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_9"
                        android:src="@mipmap/scan" />

                    <EditText
                        android:id="@+id/tv_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/dp_3"
                        android:hint="付款码"
                        android:background="@drawable/shape_white_3"
                        android:textColor="@color/color_3"
                        android:textColorHint="@color/color_9"
                        android:textSize="@dimen/sp_13" />
                    <ImageView
                        android:id="@+id/iv_clear"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_9"
                        android:src="@mipmap/bclose"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_8"
                android:text="操作提示：请刷会员卡  扫码  手机号"
                android:textColor="#ffa3a3a3"
                android:textSize="10sp" />

            <com.newsuper.t.markert.view.SixteenKeyboardView
                android:id="@+id/memberPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_marginTop="@dimen/dp_14_5"
                android:layout_marginRight="@dimen/dp_9"
                android:layout_marginBottom="@dimen/dp_9" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>