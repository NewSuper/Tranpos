<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/adapter_list_content_header"
            android:layout_width="@dimen/ws35dp"
            android:layout_height="@dimen/ws35dp"
            android:layout_marginLeft="@dimen/ws16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ws7dp"
            android:layout_toRightOf="@id/adapter_list_content_header">

            <TextView
                android:id="@+id/adapter_list_content_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="以马内利"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/ws14dp" />


            <LinearLayout
                android:id="@+id/adapter_list_content_like_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/adapter_list_content_like"
                    android:layout_width="@dimen/ws16dp"
                    android:layout_height="@dimen/ws16dp"
                    android:layout_marginRight="@dimen/ws4dp"
                    android:background="@mipmap/icon_comments_no" />

                <TextView
                    android:id="@+id/adapter_list_content_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ws3dp"
                    android:layout_marginRight="@dimen/ws11dp"
                    android:text="0"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/ws12dp" />

            </LinearLayout>


            <TextView
                android:layout_below="@+id/adapter_list_content_name"
                android:id="@+id/adapter_list_content_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ws10dp"
                android:layout_marginRight="@dimen/ws13dp"
                android:text="的马卡龙拿了那十六年擦上来看"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/ws16dp" />

            <LinearLayout
                android:layout_below="@+id/adapter_list_content_content"
                android:layout_marginTop="@dimen/ws6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/ws25dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/adapter_list_content_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/ws5dp"
                    android:text="0小时前"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/ws12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="·"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/ws12dp" />
                <!--android:background="@drawable/shape_fbf6ea_radius_100"-->
                <TextView
                    android:id="@+id/adapter_list_content_content_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/ws5dp"
                    android:paddingTop="@dimen/ws8dp"
                    android:paddingRight="@dimen/ws9dp"
                    android:paddingBottom="@dimen/ws8dp"
                    android:text="回复"
                    android:textColor="@color/c_FF5500"
                    android:textSize="@dimen/ws12dp" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
