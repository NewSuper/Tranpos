<?xml version="1.0" encoding="utf-8"?>

<layout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws320dp"
        android:background="@drawable/base_white_shadow"
        android:orientation="vertical"
        android:paddingTop="2px"
        android:paddingLeft="2px"
        android:paddingBottom="10px"
        android:paddingRight="10px">

        <!--上部-->
        <LinearLayout

            android:id="@+id/contain1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws232dp"
            android:orientation="horizontal">

            <!--上左-->
            <LinearLayout
                android:layout_width="@dimen/ws0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ws15dp"
                    android:text="2019.07"
                    android:textColor="#333"
                    android:textSize="@dimen/app_text3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ws5dp"
                    android:text="12"
                    android:textColor="#333"
                    android:textSize="@dimen/app_text"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在上映"
                    android:textColor="#999"
                    android:layout_marginTop="@dimen/ws5dp"
                    android:textSize="@dimen/app_text3"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal">


                        <TextView
                            android:id="@+id/tv_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ws5dp"
                            android:text="8.2分"
                            android:textColor="@color/app_color"
                            android:textSize="@dimen/app_text" />


                        <RelativeLayout
                            android:layout_width="@dimen/ws60dp"
                            android:layout_height="13dp"
                            android:layout_marginTop="@dimen/ws5dp"
                            android:background="#dddddd">

                            <com.juejinchain.android.module.movie.view.ScoreView
                                android:id="@+id/scv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignTop="@+id/scv"
                                android:layout_marginTop="0dp"
                                android:background="@mipmap/score_bg" />

                        </RelativeLayout>



                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <!--上右-->
            <RelativeLayout
                android:layout_width="@dimen/ws0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <com.juejinchain.android.module.movie.view.CircleImageView
                    android:id="@+id/iv_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:layout_height="@dimen/ws45dp"
                    android:layout_alignParentBottom="true"
                    android:text="《命运之夜》"
                    android:textColor="#333"
                    android:gravity="center"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="@dimen/app_text2"
                    android:background="#aaffffff"
                    android:layout_marginBottom="@dimen/ws10dp"/>

                <TextView
                    android:layout_width="10dp"
                    android:background="#fff"
                    android:layout_height="match_parent" />

            </RelativeLayout>


        </LinearLayout>



        <!--下部-->
        <LinearLayout
            android:id="@+id/contain3"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws98dp"
            android:orientation="vertical">


            <RelativeLayout
                android:background="@color/app_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ws40dp">

                <TextView
                    android:layout_toLeftOf="@id/bt_play"
                    android:id="@+id/tv_long"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ws10dp"
                    android:text="113分钟·日本"
                    android:textColor="#333"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginRight="@dimen/ws10dp"
                    android:textSize="@dimen/app_text2" />

                <Button
                    android:id="@+id/bt_play"
                    android:layout_width="@dimen/ws80dp"
                    android:layout_height="@dimen/ws25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/ws10dp"
                    android:background="@drawable/bg_yyy"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="立即播放"
                    android:textColor="#fff"
                    android:textSize="14dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_direct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ws10dp"
                android:layout_marginRight="@dimen/ws10dp"
                android:text="导演 须藤友德"
                android:textColor="#666"
                android:textSize="@dimen/app_text3" />

            <TextView

                android:id="@+id/tv_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ws10dp"
                android:layout_marginRight="@dimen/ws10dp"
                android:layout_marginTop="@dimen/ws3dp"
                android:text="主演 杉山纪彰/下屋则子/神谷浩史"
                android:textColor="#666"
                android:lineSpacingExtra="@dimen/ws2dp"
                android:lines="2"
                android:ellipsize="end"
                android:textSize="@dimen/app_text3" />


        </LinearLayout>

        <!--分割线-->
        <TextView
            android:layout_above="@id/contain3"
            android:id="@+id/contain2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#efefef" />


    </RelativeLayout>

</LinearLayout>

</layout>