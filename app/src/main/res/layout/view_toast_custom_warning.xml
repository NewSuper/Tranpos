<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_toast_warning"
    android:paddingLeft="@dimen/ws10dp"
    android:paddingRight="@dimen/ws10dp"
    android:paddingTop="@dimen/ws7dp"
    android:paddingBottom="@dimen/ws7dp"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_exclamation_point"
        />
    <TextView
        android:id="@+id/tv_msg"
        android:layout_marginLeft="@dimen/ws5dp"
        android:textColor="#FF8833"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="该手机已被注册，请登录"
        />
</LinearLayout>