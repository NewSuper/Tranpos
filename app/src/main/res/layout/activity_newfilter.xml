<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <View
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <!--标题-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/app_white">


            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/backblack" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text="分类找影视"
                android:textColor="#333"
                android:textSize="@dimen/app_text" />


        </RelativeLayout>

        <com.juejinchain.android.view.LoadingView2
            android:id="@+id/loading0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#efefef" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="形式"
                android:textColor="#2a2a2a"
                android:textSize="16dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_xs"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="地区"
                android:textColor="#2a2a2a"
                android:textSize="16dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_dq"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="类型"
                android:textColor="#2a2a2a"
                android:textSize="16dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_lx"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="年代"
                android:textColor="#2a2a2a"
                android:textSize="16dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_nd"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#f5f5f5"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="影视列表"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:textSize="15dp"
                android:textColor="#2A2A2A"/>

            <RadioGroup
                android:id="@+id/rg_tab"
                android:background="@drawable/bg_moviefilter0"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:orientation="horizontal">

                <!--<RadioButton-->
                    <!--android:textColor="@drawable/movie_newfilter_textcolor_sel"-->
                    <!--android:background="@drawable/movie_newfilter_bg_sel"-->
                    <!--android:button="@null"-->
                    <!--android:id="@+id/rb1"-->
                    <!--android:layout_width="50dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:text="默认"-->
                    <!--android:gravity="center"-->
                    <!--android:textSize="14dp"/>-->

                <RadioButton
                    android:textColor="@drawable/movie_newfilter_textcolor_sel"
                    android:background="@drawable/movie_newfilter_bg_sel"
                    android:button="@null"
                    android:id="@+id/rb2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="热度"
                    android:gravity="center"
                    android:textSize="14dp"/>

                <RadioButton
                    android:textColor="@drawable/movie_newfilter_textcolor_sel"
                    android:background="@drawable/movie_newfilter_bg_sel"
                    android:button="@null"
                    android:id="@+id/rb3"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="评分"
                    android:gravity="center"
                    android:textSize="14dp"/>

                <RadioButton
                    android:textColor="@drawable/movie_newfilter_textcolor_sel"
                    android:background="@drawable/movie_newfilter_bg_sel"
                    android:button="@null"
                    android:id="@+id/rb4"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="时间"
                    android:gravity="center"
                    android:textSize="14dp"/>


            </RadioGroup>

        </RelativeLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:layout_width="match_parent"
            android:id="@+id/srl"
            android:layout_height="match_parent">
        <com.juejinchain.android.view.LoadingView2
            android:layout_width="match_parent"
            android:id="@+id/loading"
            android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        </com.juejinchain.android.view.LoadingView2>

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>
        </com.juejinchain.android.view.LoadingView2>
    </LinearLayout>
</layout>
