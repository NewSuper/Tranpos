<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/title_bar"
                layout="@layout/module_include_title_bar" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ws0_5dp"
                android:background="@color/c_f0f0f0"/>

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.newsuper.t.juejinbao.view.LoadingView
                    android:id="@+id/loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v4.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/ws45dp"
                                android:text="热门推荐"
                                android:textColor="@color/c_333333"
                                android:textSize="@dimen/ws16sp"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/ws15dp"
                                android:paddingRight="@dimen/ws15dp"/>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_recommend"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/ws10dp"/>

                            <View
                                android:id="@+id/view_top"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/ws10dp"
                                android:background="@color/c_f6f6f6"/>

                            <TextView
                                android:id="@+id/tv_classify"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/ws15dp"
                                android:paddingBottom="@dimen/ws3dp"
                                android:textColor="@color/c_333333"
                                android:textSize="@dimen/ws16sp"
                                android:gravity="center_vertical"
                                android:textStyle="bold"
                                android:paddingLeft="@dimen/ws15dp"
                                android:paddingRight="@dimen/ws15dp"
                                android:visibility="gone"/>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_classify"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/ws15dp"
                                android:layout_marginRight="@dimen/ws15dp"/>

                            <TextView
                                android:id="@+id/tv_empty"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/ws45dp"
                                android:text="没有更多数据了"
                                android:gravity="center"
                                android:textColor="@color/c_999999"
                                android:textSize="@dimen/ws14sp"
                                android:layout_marginTop="@dimen/ws20dp"
                                android:visibility="gone"/>

                        </LinearLayout>

                    </android.support.v4.widget.NestedScrollView>

                </com.newsuper.t.juejinbao.view.LoadingView>

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_bookshelf"
            android:layout_width="@dimen/ws67dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ws70dp"
            android:src="@mipmap/icon_story_adv_enter"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ws10dp"
            android:visibility="gone"/>

    </RelativeLayout>

</layout>