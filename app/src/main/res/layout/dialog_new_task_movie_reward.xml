<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.newsuper.t.juejinbao.view.CustomLayout
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.6">

        <FrameLayout
            android:id="@+id/iv_scan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws30dp"
            android:layout_marginTop="@dimen/ws10dp"
            android:layout_marginLeft="@dimen/ws10dp"
            android:layout_marginRight="@dimen/ws80dp"
            android:background="@drawable/bg_search_home_shape"/>

    </com.newsuper.t.juejinbao.view.CustomLayout>


    <ImageView
        android:id="@+id/iv_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ws50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/ws120dp"
        android:src="@mipmap/ic_click"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击搜索框进入搜索页面"
        android:textColor="@color/white"
        android:textSize="@dimen/ws17dp"
        android:textStyle="bold"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="3.0"
        android:shadowColor="#4d000000"
        android:layout_marginTop="@dimen/ws10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/ws80dp"
        android:layout_below="@+id/iv_click"/>


</RelativeLayout>