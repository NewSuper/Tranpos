<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_shop_sort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_shop_sort"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/text_color_33"
                android:text="综合排序" />

            <ImageView
                android:id="@+id/iv_shop_sort"
                android:layout_width="8dp"
                android:layout_height="5dp"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon_xiala_blark" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_shop_sale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/text_color_66"
            android:text="销量" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_shop_dis"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/text_color_66"
            android:text="距离" />
        <View
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="1dp"/>
        <LinearLayout
            android:id="@+id/ll_shop_screen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="33dp"
                android:layout_height="30dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/tv_shop_screen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textSize="13sp"
                    android:textColor="@color/text_color_66"
                    android:text="筛选" />
                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/shape_filter_count"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="invisible"
                    android:text="1"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_shop_screen"
                android:layout_width="8dp"
                android:layout_height="5dp"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon_xiala_gray" />
        </LinearLayout>

    </LinearLayout>
    <com.newsuper.t.consumer.widget.defineTopView.WGridView
        android:id="@+id/gv_filter"
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="30dp"
        android:horizontalSpacing="10dp"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:numColumns="4"/>
    <ListView
        android:id="@+id/lv_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:dividerHeight="0dp"
        android:divider="@color/white"
        android:background="@color/white"/>
    <LinearLayout
        android:id="@+id/ll_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="gone">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textColor="@color/text_color_66"
                    android:textSize="13sp"
                    android:text="优惠活动（单选）"/>
                <com.newsuper.t.consumer.widget.defineTopView.WGridView
                    android:id="@+id/gv_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:horizontalSpacing="25dp"
                    android:verticalSpacing="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textColor="@color/text_color_66"
                    android:textSize="13sp"
                    android:text="商家服务"/>
                <com.newsuper.t.consumer.widget.defineTopView.WGridView
                    android:id="@+id/gv_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:horizontalSpacing="25dp"
                    android:verticalSpacing="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textColor="@color/text_color_66"
                    android:textSize="13sp"
                    android:text="店铺分类（多选）"/>
                <com.newsuper.t.consumer.widget.defineTopView.WGridView
                    android:id="@+id/gv_classify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"
                    android:horizontalSpacing="25dp"
                    android:layout_marginBottom="20dp"
                    android:verticalSpacing="10dp"/>

            </LinearLayout>

        </ScrollView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_f5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_clear"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:textColor="@color/text_color_33"
                android:gravity="center"
                android:text="清空"/>
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@color/theme_red"
                android:gravity="center"
                android:text="完成"/>

        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/vv_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="100dp"
        android:background="#80000000"
        android:visibility="gone"/>
