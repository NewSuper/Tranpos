<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@mipmap/bg_reward_dialog"
    android:orientation="vertical">

    <ImageView
        android:visibility="invisible"
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:padding="@dimen/ws10dp"
        android:src="@mipmap/close_icon" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ws10dp"
        android:layout_marginBottom="@dimen/ws20dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_coin" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/ws10dp"
            android:layout_toRightOf="@+id/img">

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阅读奖励"
                android:textColor="@color/c_FF5500"
                android:textSize="@dimen/ws17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_label"
                android:text="到账啦"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/ws17dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_reward_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"

                android:text="+ 22金币"
                android:textColor="@color/c_FF5500"
                android:textSize="@dimen/ws15dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ws10dp"
        android:layout_marginRight="@dimen/ws10dp">

        <ImageView
            android:id="@+id/image_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_watch_ad"
            android:scaleType="centerCrop" />
        、
    </FrameLayout>

    <TextView
        android:id="@+id/tv_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ws30dp"
        android:background="@drawable/shap_line_ff6600_round_100"
        android:gravity="center"
        android:paddingLeft="@dimen/ws30dp"
        android:paddingTop="@dimen/ws10dp"
        android:paddingRight="@dimen/ws30dp"
        android:paddingBottom="@dimen/ws10dp"
        android:text="看视频双倍奖励"
        android:textColor="@color/c_ff6600" />
</LinearLayout>
</RelativeLayout>