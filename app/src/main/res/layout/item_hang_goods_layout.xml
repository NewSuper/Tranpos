<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_count"
        app:layout_constraintHorizontal_weight="4"
        android:gravity="center_vertical"
        android:textSize="@dimen/sp_6"
        android:textColor="@color/c_202020"
        android:layout_marginTop="@dimen/dp_3"
        android:paddingLeft="@dimen/dp_9"/>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_product_name"
        app:layout_constraintRight_toLeftOf="@+id/tv_single_price"
        tools:text="0"
        android:gravity="center"
        android:textSize="@dimen/sp_6"
        android:layout_marginLeft="@dimen/dp_4"
        android:textColor="@color/c_202020"
        android:layout_marginTop="@dimen/dp_3"/>
    <TextView
        android:id="@+id/tv_single_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_count"
        app:layout_constraintRight_toLeftOf="@+id/tv_total_money"
        tools:text="0.00"
        android:gravity="center_vertical|right"
        android:textSize="@dimen/sp_6"
        android:textColor="@color/c_202020"
        android:layout_marginTop="@dimen/dp_3"/>
    <TextView
        android:id="@+id/tv_total_money"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_single_price"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="0.00"
        android:gravity="center_vertical|right"
        android:textSize="@dimen/sp_6"
        android:textColor="@color/c_202020"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginRight="@dimen/dp_11"/>
    <View
        android:id="@+id/line_dash"
        android:layout_width="0dp"
        android:layerType="software"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_line_black_dash"/>
</android.support.constraint.ConstraintLayout>