<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EBEBEB">
    <com.newsuper.t.consumer.widget.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/theme_red"
        android:layout_height="@dimen/toolbar_height">
    </com.newsuper.t.consumer.widget.CustomToolbar>
    <RelativeLayout
        android:id="@+id/rl_code"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/text_color_33"
            android:text="关注公众号"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="49dp"
            android:layout_height="25dp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/shape_requirement_red"
            android:text="关注"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_below="@+id/rl_code"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/icon_phone2x"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:textColor="@color/text_color_33"
            android:text="客服电话：07551211211"
            android:layout_centerVertical="true"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_call"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/text_red_f8"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:gravity="center"
            android:text="一键拨打"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_phone"
        android:orientation="vertical">
        <View
            android:id="@+id/vv_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="75dp"
            android:layout_below="@+id/vv_line">
        </android.support.v7.widget.RecyclerView>
        <com.newsuper.t.consumer.widget.ShopScreenView
            android:id="@+id/shop_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vv_line"/>
        <LinearLayout
            android:id="@+id/ll_load_fail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/vv_line"
            android:visibility="gone">
            <include layout="@layout/layout_load_fail"/>
        </LinearLayout>
        <com.newsuper.t.consumer.widget.LoadingAnimatorView
            android:id="@+id/load_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/vv_line"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/ll_filter_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_below="@+id/shop_screen"
            android:background="@color/white"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/icon_empty_shop"/>
            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="抱歉，没有符合条件的商家跟商品您可以减少筛选项试试~"
                android:textColor="#ff666666"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_reset"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/theme_red"
                android:text="重置筛选"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="100dp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_no_login"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="您还未登录呢！"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/text_color_57"/>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="去登录吧"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:background="@drawable/shape_btn_reload"
            />
    </LinearLayout>
</RelativeLayout>
