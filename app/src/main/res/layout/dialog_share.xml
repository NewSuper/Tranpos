<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/JJ.WidthFill.Vertical"
    android:layout_marginBottom="10dp"
    android:background="@drawable/shape_rect_radius">

    <RelativeLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws75dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">
        <com.newsuper.t.juejinbao.view.RoundImageView
            android:id="@+id/img_bg"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/img_share_seeFanc"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/ws15dp"
            android:layout_marginRight="@dimen/ws10dp"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleView"
        style="@style/JJ.WidthFill" />

    <View style="@style/JJ.Line.Horizontal"/>

    <TextView
        android:id="@+id/cancel"
        style="@style/JJ.Label.Minor.Large"
        android:layout_width="match_parent"
        android:background="@drawable/shape_bottom_btn_raidus"
        android:gravity="center"
        android:padding="12dp"
        android:text="取消" />
</LinearLayout>