<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA"/>

    <LinearLayout
        android:id="@+id/ll_radio_group"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <View
            android:layout_width="18dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ll_shop_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_shop_type"
                style="@style/shop_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部分类" />

            <ImageView
                android:id="@+id/iv_shop_type"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:src="@mipmap/store_list_black" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5" />

        <LinearLayout
            android:id="@+id/ll_shop_sort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_shop_sort"
                style="@style/shop_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合排序" />

            <ImageView
                android:id="@+id/iv_shop_sort"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:src="@mipmap/store_list_black" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5" />

        <LinearLayout
            android:id="@+id/ll_shop_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_shop_status"
                style="@style/shop_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="筛选" />

            <ImageView
                android:id="@+id/iv_shop_status_select"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:src="@mipmap/store_list_black" />
        </LinearLayout>

        <View
            android:layout_width="18dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EAEAEA"/>
</LinearLayout>
