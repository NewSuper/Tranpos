<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws60dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="@dimen/ws16dp"
            android:layout_height="@dimen/ws16dp"
            android:text="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/ws18dp"
            android:layout_marginRight="@dimen/ws4dp"
            android:textColor="@color/c_999999"
            android:background="@drawable/shape_efefef_round_2"
            android:textStyle="bold"
            android:textSize="@dimen/ws12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/ws10dp"
            android:paddingRight="@dimen/ws10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你的答案"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/ws16dp"
                    android:id="@+id/tv_title"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ws5dp"
                    android:layout_marginRight="@dimen/ws5dp"
                    android:id="@+id/iv_hot"
                    android:src="@mipmap/ic_hot"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(来源：打破一切恐惧 我能找到答案)"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/ws11dp"
                android:layout_marginTop="@dimen/ws5dp"
                android:id="@+id/tv_type"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3489372"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/ws11dp"
            android:layout_marginLeft="@dimen/ws15dp"
            android:layout_marginRight="@dimen/ws15dp"/>

    </LinearLayout>

</LinearLayout>