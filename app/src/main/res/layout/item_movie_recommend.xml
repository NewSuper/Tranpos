<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws215dp"
        android:layout_marginLeft="@dimen/ws3dp"
        android:layout_marginRight="@dimen/ws3dp">

        <!--下部文本-->
        <LinearLayout
            android:id="@+id/rl_tt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws55dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/ws5dp"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="樱兰高校男公关部"
                android:textColor="#333"
                android:textSize="@dimen/ws15dp" />

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="更新至01"
                android:textColor="#999"
                android:textSize="@dimen/ws13dp" />

        </LinearLayout>

        <!--图片区域-->
        <RelativeLayout
            android:layout_above="@id/rl_tt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!--图片-->
            <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scaleType="centerCrop"></ImageView>

            <!--评分-->
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/ws20dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_movie_bottom">

                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ws5dp"
                    android:text="2019"
                    android:textColor="#fff"
                    android:textSize="@dimen/app_text2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/ws5dp"
                    android:id="@+id/tv_rate"
                    android:text="3.3"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/app_text2" />

            </RelativeLayout>




        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>