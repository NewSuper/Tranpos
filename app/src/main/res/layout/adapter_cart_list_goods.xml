<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    android:layout_marginTop="15dp">
    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@mipmap/common_def_food"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_goods_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_gravity="center"
                android:paddingLeft="3dp"
                android:paddingTop="0.5dp"
                android:paddingBottom="0.5dp"
                android:paddingRight="3dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@color/fb_yellow"
                android:text="折"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_color_37"
                android:text="商品名称"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_gravity="bottom"
                android:textColor="@color/text_color_37"
                android:layout_marginBottom="1dp"
                android:text="￥"/>
            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="17sp"
                android:textColor="@color/text_color_37"
                android:text="100"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_goods_nature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_color_67"
            android:text="商品属性"/>

        <TextView
            android:id="@+id/tv_goods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_color_99"
            android:text="x2"
            />

    </LinearLayout>
</LinearLayout>
