<?xml version="1.0" encoding="utf-8"?>
<layout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <include
            android:id="@+id/activity_login_bar"
            layout="@layout/module_include_title_bar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws0_5dp"
            android:background="@color/c_cccccc" />

        <LinearLayout
            android:id="@+id/activity_set_and_change_psw_set"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws50dp"
            android:layout_marginTop="@dimen/ws5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前手机号为："
                android:textColor="@color/c_666666"
                android:textSize="@dimen/ws16dp" />

            <TextView
                android:id="@+id/activity_set_and_change_psw_set_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/ws16dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/activity_set_and_change_psw_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ws5dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/ws50dp"
                android:layout_marginLeft="@dimen/ws32dp"
                android:layout_marginRight="@dimen/ws32dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/ws0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ws9dp"
                    android:text="手机号码"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/ws16dp" />

                <EditText
                    android:id="@+id/activity_login_edit_phone"
                    android:layout_width="@dimen/ws0dp"
                    android:layout_height="@dimen/ws50dp"
                    android:layout_weight="0.6"
                    android:background="@null"
                    android:hint="请输入11位手机号码"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/c_333333"
                    android:textColorHint="@color/c_B2B2B2"
                    android:textSize="@dimen/ws14dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/activity_login_edit_phone_clean"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ws50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ws18dp"
                android:paddingLeft="@dimen/ws15dp"
                android:paddingRight="@dimen/ws15dp"
                android:src="@mipmap/icon_login_clean"
                android:visibility="gone" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws0_5dp"
            android:layout_marginLeft="@dimen/ws32dp"
            android:layout_marginRight="@dimen/ws32dp"
            android:background="@color/c_cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws50dp"
            android:layout_marginLeft="@dimen/ws32dp"
            android:layout_marginTop="@dimen/ws15dp"
            android:layout_marginRight="@dimen/ws32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/activity_psw_code"
                android:layout_width="0dp"
                android:layout_height="@dimen/ws50dp"
                android:layout_weight="0.6"
                android:background="@null"
                android:hint="@string/login_edt_phone_code"
                android:paddingLeft="@dimen/ws9dp"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_B2B2B2"
                android:textSize="@dimen/ws16dp" />

            <View
                android:layout_width="@dimen/ws0_5dp"
                android:layout_height="@dimen/ws35dp"
                android:background="@color/c_cccccc" />

            <TextView
                android:id="@+id/activity_psw_get_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/c_ED6B2C"
                android:textSize="@dimen/ws16dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws0_5dp"
            android:layout_marginLeft="@dimen/ws32dp"
            android:layout_marginRight="@dimen/ws32dp"
            android:background="@color/c_cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws50dp"
            android:layout_marginLeft="@dimen/ws32dp"
            android:layout_marginTop="@dimen/ws15dp"
            android:layout_marginRight="@dimen/ws32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/ws0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/ws9dp"
                android:text="新密码"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/ws16dp" />

            <EditText
                android:id="@+id/activity_set_and_change_new_psw"
                android:layout_width="@dimen/ws0dp"
                android:layout_height="@dimen/ws50dp"
                android:layout_weight="0.6"
                android:background="@null"
                android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZqwertyuioplkjhgfdsazxcvbnm，。、.！@#￥%"
                android:hint="请输入长度为6-20位的密码"
                android:maxLength="20"
                android:singleLine="true"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_B2B2B2"
                android:textSize="@dimen/ws14dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws0_5dp"
            android:layout_marginLeft="@dimen/ws32dp"
            android:layout_marginRight="@dimen/ws32dp"
            android:background="@color/c_cccccc" />

        <TextView
            android:id="@+id/activity_login_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws47dp"
            android:layout_marginLeft="@dimen/ws32dp"
            android:layout_marginTop="@dimen/ws23dp"
            android:layout_marginRight="@dimen/ws32dp"
            android:background="@drawable/shap_bg_50ed6b2c_round_100"
            android:enabled="false"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/ws17dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/activity_set_and_change_no_send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/ws30dp"
                android:paddingTop="@dimen/ws5dp"
                android:paddingBottom="@dimen/ws5dp"
                android:text="收不到验证码？"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/ws14dp" />
        </RelativeLayout>
    </LinearLayout>

</layout>