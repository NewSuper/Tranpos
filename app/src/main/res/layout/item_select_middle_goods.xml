<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goods_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/common_def_food" />

            <TextView
                android:id="@+id/tv_huodong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_huodong_label"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:text="今日特价"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/ll_sale_out"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#7Fffffff"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_sale_out_middle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_stop_sale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#7Fffffff"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_sale_out_middle" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="商品名称"
                android:textColor="@color/text_color_33"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/tvName"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="商品描述"
                android:textColor="#999999"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_show_sales"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_desc"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSaleCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="已售0"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/ll_show_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="1.5dp"
                        android:src="@mipmap/icon_vip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="会员价 "
                        android:textColor="#ff9027"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvVipPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="#ff9027"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvVipQi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起"
                        android:textColor="#999999"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_old_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_show_sales"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp" />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/ll_edit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/ll_old_price">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_fuhao"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:gravity="bottom"
                        android:text="￥"
                        android:textColor="@color/tv_price_red"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:textColor="@color/tv_price_red"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvQi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:gravity="bottom"
                        android:text="起"
                        android:textColor="#999999"
                        android:textSize="11sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:gravity="bottom"
                        android:textColor="#999999"
                        android:textSize="11sp"
                        android:visibility="visible" />
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/fl_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">
                    <LinearLayout
                        android:id="@+id/ll_edit_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llMinus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:paddingRight="5dp"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@mipmap/button_minus_big" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="center_horizontal"
                            android:textColor="#676767"
                            android:minWidth="16dp"
                            android:textSize="16sp"
                            android:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/llAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:gravity="bottom"
                            android:orientation="vertical"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@mipmap/button_add_big" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_select_nature"
                        android:layout_width="55dp"
                        android:layout_height="28dp"
                        android:layout_gravity="bottom|right"
                        android:layout_marginRight="5dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_cart"
                            android:text="选规格"
                            android:textColor="#ffffff"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvShowCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/circle_red_kongxin"
                            android:gravity="center"
                            android:textColor="@color/theme_red"
                            android:textSize="10sp"
                            android:visibility="visible" />
                    </RelativeLayout>
                </FrameLayout>
                <LinearLayout
                    android:id="@+id/ll_limit_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"
                    android:visibility="invisible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="5dp"
                        android:text="非可售时间"
                        android:textColor="#999999"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginBottom="2.5dp"
                        android:src="@mipmap/icon_wenhao" />
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_edit"
                android:gravity="bottom"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_discount_2" />

                    <TextView
                        android:id="@+id/tv_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:textColor="#ff9027"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_discount_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:textColor="#ff9027"
                        android:textSize="12sp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_min_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff9027"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
