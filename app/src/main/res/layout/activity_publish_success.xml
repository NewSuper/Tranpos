<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.newsuper.t.consumer.widget.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">
    </com.newsuper.t.consumer.widget.CustomToolbar>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:src="@mipmap/zhifu_icon_chenggong_3x"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="发布成功"
        android:textSize="18sp"
        android:textColor="@color/text_color_33"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="恭喜你！信息已提交成功请您耐心等待"
        android:textSize="14sp"
        android:textColor="@color/text_color_66"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_return"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="返回"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_order_button"
            android:textSize="15sp"
            android:textColor="#FB6E70"/>
        <TextView
            android:id="@+id/tv_cat"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="查看"
            android:textSize="15sp"
            android:background="@drawable/shape_rec_red"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
