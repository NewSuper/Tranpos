<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.newsuper.t.consumer.widget.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/theme_red"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_f5"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_deposit_history"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_tablayout"
        app:tabIndicatorHeight="2dp"
        app:tabIndicatorColor="@color/theme_red"
        app:tabSelectedTextColor="@color/text_color_33"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/text_color_99"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_deposit_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
</LinearLayout>