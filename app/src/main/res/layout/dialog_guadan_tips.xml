<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_220"
        android:layout_height="@dimen/dp_177"
        android:background="@drawable/shape_white_5dp"
        android:orientation="vertical">

        <include layout="@layout/item_dialog_title" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_45"
            android:textColor="#ff2f2f2f"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="92dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_12_5"
                android:background="@drawable/layerlist_aab0b4"
                android:text="取消(Esc)"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="92dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_12_5"
                android:background="@drawable/layerlist_ff3510"
                android:text="确定(Enter)"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>