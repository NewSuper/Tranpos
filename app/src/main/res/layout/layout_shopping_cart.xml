<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipChildren="false">
        <com.newsuper.t.consumer.widget.InterceptTouchEventView
            android:id="@+id/vv_black_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#80000000"
            android:visibility="invisible"/>
        <com.newsuper.t.consumer.widget.ClickableFrameLayout
            android:id="@+id/fl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clipChildren="false"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_manjian"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="#FFE6CF"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:visibility="gone" />
                <LinearLayout
                    android:id="@+id/ll_cart_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:background="#f5f5f5"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="购物车"
                            android:textColor="#676767"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:id="@+id/ll_clear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@mipmap/delete2"/>
                            <TextView
                                android:id="@+id/tv_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="清空"
                                android:textSize="16sp"
                                android:textColor="#676767"/>
                        </LinearLayout>

                    </RelativeLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#EBEBEB" />
                    <com.newsuper.t.consumer.widget.MaxHeightRecycleView
                        android:id="@+id/rcl_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:background="#ffffff"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_cart"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#212121"
                    android:clipChildren="false"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/show_cart"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:clipChildren="false"
                        android:layout_marginTop="-17dp"
                        android:layout_marginLeft="15dp">
                        <ImageView
                            android:id="@+id/imgCart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/icon_shopping_cart_grey" />
                        <TextView
                            android:id="@+id/tvCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/circle_red"
                            android:gravity="center"
                            android:textColor="#ffffff"
                            android:textSize="10sp"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:text="￥"
                        android:visibility="visible"/>
                    <TextView
                        android:id="@+id/tvCost"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="#ffffff"
                        android:textSize="23sp"
                        android:text="0"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tvTips"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:id="@+id/tvSubmit"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="#df5458"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="选好了"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_shop_tip"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#b4212121"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:visibility="gone"/>
        </com.newsuper.t.consumer.widget.ClickableFrameLayout>
    </LinearLayout>
</FrameLayout>
