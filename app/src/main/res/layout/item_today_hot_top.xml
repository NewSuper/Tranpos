<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_today_hot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:id="@+id/head_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws5dp"
        android:background="#F6F4F5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ws10dp"
            android:background="@mipmap/bg_today_hot_title_small" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/ws15dp"
            android:layout_marginLeft="@dimen/ws10dp"
            android:layout_marginRight="@dimen/ws10dp"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawableRight="@mipmap/icon_today_hot_time"
            android:drawablePadding="@dimen/ws8dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#333333"
            android:textSize="@dimen/ws18dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws5dp"
        android:background="#F6F4F5" />

</LinearLayout>