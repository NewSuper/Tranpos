<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white">
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_6"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_controller"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_shadow_shift"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_5">
        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_receipt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_41"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_202020"
                android:text="交接对账(F6)"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_product"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_41"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_202020"
                android:text="商品对账(F7)"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_16"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_next"
            app:layout_constraintTop_toBottomOf="@id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_categroy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_41"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_202020"
                android:text="类别对账(F8)"
                android:layout_marginLeft="@dimen/dp_16"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_no_print"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_41"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_202020"
                android:text="不交班打印(F2)"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_16"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_next"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_26"
            android:text="开始时间:"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/c_202020"/>
        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_19"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/c_202020"
            app:layout_constraintTop_toBottomOf="@id/ll_next"
            app:layout_constraintLeft_toRightOf="@+id/tv_start"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_21"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_6"
            android:background="@drawable/shape_white_line_r2"/>
        <TextView
            android:id="@+id/tv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_start"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_22"
            android:text="结束时间:"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/c_202020"/>
        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_19"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/c_202020"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_8"
            app:layout_constraintTop_toBottomOf="@+id/tv_start_time"
            app:layout_constraintLeft_toRightOf="@+id/tv_end"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/shape_white_line_r2"/>
        <TextView
            android:id="@+id/tv_memo_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_end"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_20"
            android:text="备          注:"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/c_202020"/>
        <EditText
            android:id="@+id/tv_memo"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_19"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/c_202020"
            app:layout_constraintTop_toBottomOf="@+id/tv_end_time"
            app:layout_constraintLeft_toRightOf="@+id/tv_start"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/shape_white_line_r2"/>
        <TextView
            android:id="@+id/tv_cash_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/tv_memo_txt"
            app:layout_constraintTop_toBottomOf="@+id/tv_memo_txt"
            android:layout_marginTop="@dimen/dp_18"
            android:text="收银员:"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/c_202020"/>
        <TextView
            android:id="@+id/tv_manger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_cash_txt"
            app:layout_constraintTop_toBottomOf="@+id/tv_memo_txt"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/c_202020"/>
        <ImageView
            android:id="@+id/iv_open_money_state"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:src="@mipmap/ic_uncheck_money"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="@+id/tv_memo"
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@+id/tv_manger"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_open_money_state"
            app:layout_constraintTop_toBottomOf="@+id/tv_manger"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="打印对账单后开钱箱"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/c_202020"/>
        <com.transpos.market.view.RoundButton
            android:id="@+id/btn_shift"
            android:layout_width="@dimen/dp_115"
            android:layout_height="@dimen/dp_26"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_open_money_state"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            app:btnCornerRadius="@dimen/dp_2"
            app:btn_is_gradient="true"
            app:btn_gradient_orientation="left_right"
            app:btn_gradient_colors="#00B4FF,#00A2FF"
            android:textColor="@color/white"
            android:text="确认交班打印(Enter)"
            android:textSize="@dimen/sp_11"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>