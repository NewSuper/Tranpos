<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/ws220dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:background="@drawable/shape_reward_popup_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_rewardTitle"
        style="@style/JJ.Label.Light.Middle"
        android:layout_marginTop="10dp"
        android:text="奖励到账"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
    <!-- 奖励到账了 -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@mipmap/ic_reward_prompt"/>

    <TextView
        android:id="@+id/tv_reward_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+00金币"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textColor="#fecf39"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_reward_type"
        style="@style/JJ.Label.Light.Small"
        android:text="阅读奖励"
        android:visibility="gone"
        android:textColor="@color/white"
        android:gravity="center"
        tools:visibility="visible"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/tv_dec"
        style="@style/JJ.Label.Light.Small"
        android:text="用掘金宝App读文章看视\n频，能多赚更多金币！"
        android:visibility="gone"
        android:textColor="@color/white"
        android:gravity="center"
        tools:visibility="visible"
        android:layout_marginBottom="@dimen/ws10dp"
        />

    <TextView
        android:gravity="center"
        android:background="@drawable/shape_bg_btn_ffac00"
        android:layout_marginBottom="@dimen/ws10dp"
        android:id="@+id/rv_confirm"
        android:textColor="@color/white"
        android:layout_width="@dimen/ws85dp"
        android:layout_height="@dimen/ws25dp"
        android:textSize="16sp"
        android:text="好的"
        />

</LinearLayout>
