<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layerType="software"
        android:padding="@dimen/dp_1"
        android:background="@drawable/shape_black_dash"
        android:layout_marginBottom="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/view_controller"
        app:layout_constraintHorizontal_weight="1">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/ic_shift_dash_top"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/txt_shift_product_txt"
            android:textColor="@color/c_202020"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_19"/>
        <View
            android:id="@+id/line_dash"
            android:layout_width="0dp"
            android:layerType="software"
            android:layout_height="@dimen/dp_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_46"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/shape_line_black_dash3"/>
        <View
            android:id="@+id/line_dash_big"
            android:layout_width="0dp"
            android:layerType="software"
            android:layout_height="1.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_dash"
            android:layout_marginTop="@dimen/dp_3"
            android:background="@drawable/shape_line_black_dash3"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@mipmap/ic_shift_center"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_dash_big"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tv_shop_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_dash"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/txt_shift_shop"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/c_202020"/>
        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_shop_txt"
            app:layout_constraintTop_toBottomOf="@id/line_dash"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_8"
            tools:text="测试门店"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/c_202020"/>
        <TextView
            android:id="@+id/tv_pos_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_shop_txt"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/txt_shift_pos"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/c_202020"/>
        <TextView
            android:id="@+id/tv_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_pos_txt"
            app:layout_constraintTop_toBottomOf="@id/tv_shop_txt"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            tools:text="0089"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/c_202020"/>
        <TextView
            android:id="@+id/tv_bus_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pos_txt"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/txt_shift_bus"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/c_202020"/>
        <TextView
            android:id="@+id/tv_bus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_bus_txt"
            app:layout_constraintTop_toBottomOf="@id/tv_pos_txt"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            tools:text="2020-08-25"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/c_202020"/>
        <TextView
            android:id="@+id/tv_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_bus_txt"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/txt_shift_date"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/c_202020"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_pos_txt"
            app:layout_constraintTop_toBottomOf="@id/tv_bus_txt"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            tools:text="2020-08-25"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/c_202020"/>


        <View
            android:layerType="software"
            android:id="@+id/line_dash2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/shape_line_black_dash3"/>
        <LinearLayout
            android:id="@+id/ll_product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/line_dash2"
            android:layout_marginTop="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_18"
            android:paddingRight="@dimen/dp_26">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/txt_product_name"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/c_202020"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_product_price"
                android:textSize="@dimen/sp_9"
                android:gravity="right"
                android:textColor="@color/c_202020"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_count"
                android:textSize="@dimen/sp_9"
                android:gravity="right"
                android:textColor="@color/c_202020"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/txt_money"
                android:textSize="@dimen/sp_9"
                android:gravity="right"
                android:textColor="@color/c_202020"/>
        </LinearLayout>

        <View
            android:layerType="software"
            android:id="@+id/line_dash3"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_product_title"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/shape_line_black_dash3"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_dash3"/>
        <View
            android:layerType="software"
            android:id="@+id/line_dashc1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_0_5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_product"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:background="#515151"/>

        <LinearLayout
            android:id="@+id/ll_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/line_dashc1"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_18"
            android:paddingRight="@dimen/dp_26">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="交易合计："
                android:textSize="@dimen/sp_9"
                android:textColor="@color/c_202020"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_bus_total_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="1555.55"
                android:gravity="right"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/c_202020"/>
            <TextView
                android:id="@+id/tv_bus_total_money"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="1555.55"
                android:gravity="right"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/c_202020"/>
        </LinearLayout>

        <View
            android:id="@+id/line_dash7"
            android:layerType="software"
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_total"
            android:layout_marginTop="@dimen/dp_78"
            android:background="@drawable/shape_line_black_dash3"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_60"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_dash7"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_shift_bg"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>