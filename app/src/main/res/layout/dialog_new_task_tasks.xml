<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.newsuper.t.juejinbao.view.CustomLayout
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.6">

        <FrameLayout
            android:id="@+id/iv_scan"
            android:layout_width="@dimen/ws120dp"
            android:layout_height="@dimen/ws120dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/ws10dp"
            android:layout_marginLeft="@dimen/ws10dp"
            android:layout_marginBottom="@dimen/ws70dp"/>

    </com.newsuper.t.juejinbao.view.CustomLayout>

    <ImageView
        android:id="@+id/iv_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_click"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/ws20dp"
        android:layout_marginBottom="@dimen/ws40dp"
        android:layout_below="@+id/view"/>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="试着点击宝箱完成任务"
        android:textColor="@color/white"
        android:textSize="@dimen/ws17dp"
        android:textStyle="bold"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="3.0"
        android:shadowColor="#4d000000"
        android:layout_marginTop="@dimen/ws330dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>