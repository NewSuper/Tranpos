<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_1ec1b3_3"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_13"
                android:src="@mipmap/title_logo" />

            <TextView
                android:id="@+id/tv_payStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingRight="@dimen/dp_13"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:paddingLeft="@dimen/dp_12"
                            android:paddingTop="@dimen/dp_22_5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="应收："
                                android:textColor="@color/color_3"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/tv_yingshou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:lines="1"
                                android:singleLine="true"
                                android:text="0"
                                android:textColor="@color/c_FF1E00"
                                android:textSize="@dimen/sp_13"
                                tools:ignore="EllipsizeMaxLines" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/dp_16_5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="已收："
                                    android:textColor="@color/color_3"
                                    android:textSize="@dimen/sp_13" />

                                <TextView
                                    android:id="@+id/tv_yishou"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:text="0"
                                    android:textColor="@color/c_FF1E00"
                                    android:textSize="@dimen/sp_13"
                                    tools:ignore="EllipsizeMaxLines" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_7"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="优惠："
                                    android:textColor="@color/color_3"
                                    android:textSize="@dimen/sp_10" />

                                <TextView
                                    android:id="@+id/tv_youhui"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:text="0"
                                    android:textColor="@color/color_3"
                                    android:textSize="@dimen/sp_10"
                                    tools:ignore="EllipsizeMaxLines" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_8_5"
                    android:background="@drawable/shape_f1f4fd_5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_6_5"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未收："
                            android:textColor="@color/color_3"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tv_weishou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/c_FF1E00"
                            android:textSize="@dimen/sp_13"
                            tools:ignore="EllipsizeMaxLines" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="找零："
                            android:textColor="@color/color_3"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tv_zhaoling"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:lines="1"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/c_202020"
                            android:textSize="@dimen/sp_25"
                            tools:ignore="EllipsizeMaxLines" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@drawable/shape_1ec1b3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_9"
                        android:src="@mipmap/scan" />

                    <EditText
                        android:id="@+id/et_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="现金 微信 支付宝 会员码"
                        android:textColor="@color/color_3"
                        android:textColorHint="@color/color_9"
                        android:textSize="@dimen/sp_13" />

                    <ImageView
                        android:id="@+id/iv_clear"
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_9"
                        android:src="@mipmap/bclose"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_24_5"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_vip"
                            android:layout_width="62dp"
                            android:layout_height="53dp"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/shape_f1f4fd_3dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/card" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="储值卡"
                                android:textColor="@color/color_3"
                                android:textSize="@dimen/sp_10" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_coupon"
                            android:layout_width="62dp"
                            android:layout_height="53dp"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/shape_f1f4fd_3dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/coupon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="优惠券"
                                android:textColor="@color/color_3"
                                android:textSize="@dimen/sp_10" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_other"
                            android:layout_width="62dp"
                            android:layout_height="53dp"
                            android:layout_marginRight="@dimen/dp_12"
                            android:layout_weight="1"
                            android:background="@drawable/shape_f1f4fd_3dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@mipmap/other" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="其他"
                                android:textColor="@color/color_3"
                                android:textSize="@dimen/sp_10" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="@color/c_e5e5e5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_cancelOrder"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/shape_f1f4fd_3dp"
                            android:text="整单\n取消"
                            android:textSize="@dimen/sp_10" />

                        <Button
                            android:id="@+id/btn_discount"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/shape_f1f4fd_3dp"
                            android:text="整单\n折扣"
                            android:textSize="@dimen/sp_10" />

                        <Button
                            android:id="@+id/btn_bargaining"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/shape_f1f4fd_3dp"
                            android:text="整单\n议价"
                            android:textSize="@dimen/sp_10" />

                        <Button
                            android:id="@+id/btn_back"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="@dimen/dp_12"
                            android:layout_weight="1"
                            android:background="@drawable/shape_f1f4fd_3dp"
                            android:text="返回\n收银"
                            android:textSize="@dimen/sp_10" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_18">

                    <com.newsuper.t.markert.view.SixteenKeyboardView
                        android:id="@+id/payMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>