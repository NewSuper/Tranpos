<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="@dimen/ws16dp"
            android:layout_height="@dimen/ws16dp"
            android:text="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/ws5dp"
            android:layout_marginRight="@dimen/ws5dp"
            android:textColor="@color/c_999999"
            android:background="@drawable/shape_efefef_round_2"
            android:textStyle="bold"
            android:textSize="@dimen/ws12sp"/>

        <TextView
            android:id="@+id/tv_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有声的紫禁"
            android:paddingTop="@dimen/ws10dp"
            android:paddingBottom="@dimen/ws10dp"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/ws15sp"/>

    </LinearLayout>

</LinearLayout>
