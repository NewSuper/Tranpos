<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws0_5dp"
        android:background="@color/c_E8E8E8"/>

   <LinearLayout
       android:id="@+id/ll_title"
       android:layout_width="match_parent"
       android:layout_height="@dimen/ws44dp"
       android:paddingLeft="@dimen/ws10dp"
       android:paddingRight="@dimen/ws10dp"
       android:gravity="center_vertical">

       <TextView
           android:id="@+id/tv_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/ws10dp"
           android:layout_marginRight="@dimen/ws10dp"
           android:text="填邀请码"
           android:textColor="@color/c_333333"
           android:textSize="@dimen/ws15sp"/>

       <TextView
           android:id="@+id/tv_flag"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="广告"
           android:textColor="@color/c_333333"
           android:textSize="@dimen/ws8sp"
           android:background="@drawable/shape_efefef_round_2"
           android:paddingLeft="@dimen/ws4dp"
           android:paddingRight="@dimen/ws4dp"
           android:paddingTop="@dimen/ws2dp"
           android:paddingBottom="@dimen/ws2dp"/>

       <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:gravity="end|center_vertical"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/tv_coin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="+50掘金宝"
               android:textColor="@color/c_FF5500"
               android:textSize="@dimen/ws12sp"
               android:layout_marginLeft="@dimen/ws8dp"
               android:layout_marginRight="@dimen/ws8dp"/>

           <ImageView
               android:id="@+id/iv_coin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/icon_coin"
               android:layout_marginRight="@dimen/ws8dp"/>

           <ImageView
               android:id="@+id/iv_more"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/ic_more_right"/>

       </LinearLayout>

   </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_f3f3f3"
        android:paddingLeft="@dimen/ws20dp"
        android:paddingRight="@dimen/ws20dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="输入好友邀请码，可得10个掘金宝"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/ws13sp"
            android:paddingTop="@dimen/ws15dp"
            android:paddingBottom="@dimen/ws15dp"/>

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="@dimen/ws78dp"
            android:layout_height="wrap_content"
            android:text="立即填写"
            android:layout_marginLeft="@dimen/ws14dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/ws12sp"
            android:background="@drawable/shape_gradient_radius_20"
            android:paddingTop="@dimen/ws5dp"
            android:paddingBottom="@dimen/ws5dp"/>

    </LinearLayout>

</LinearLayout>
