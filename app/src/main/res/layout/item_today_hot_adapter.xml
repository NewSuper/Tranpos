<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_today_hot_circle"
        android:layout_marginTop="17dp"/>

    <View
        android:id="@+id/first_gone"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_start"
        app:layout_constraintLeft_toLeftOf="@id/iv_start"
        app:layout_constraintRight_toRightOf="@id/iv_start"
        android:background="#FF5500"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iv_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/iv_start"
        app:layout_constraintRight_toRightOf="@id/iv_start"
        android:background="#FF5500"
        />
    
    <LinearLayout
        android:id="@+id/ll_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_start"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginBottom="7dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text=""/>

        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#666666"
            android:text=""/>

    </LinearLayout>
    
    <ImageView
        android:id="@+id/iv_pic"
        android:layout_marginTop="10dp"
        android:layout_width="104dp"
        android:layout_height="123dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/ll_date"
        app:layout_constraintLeft_toRightOf="@id/iv_start"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_pic"
        app:layout_constraintLeft_toRightOf="@id/iv_pic"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#333333"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/content_middle"
        android:text=""
        />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_desc"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toRightOf="@id/iv_pic"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:textColor="#666666"
        android:layout_height="wrap_content"
        android:textSize="@dimen/content_middle"
        android:text=""
        />

    <android.support.constraint.Barrier
        android:id="@+id/bottom_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="iv_pic,tv_desc"/>

    <View
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_barrier"
        android:background="@android:color/transparent"
        />


</android.support.constraint.ConstraintLayout>