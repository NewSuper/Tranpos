<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws5dp"
        android:background="#f3f4f5" />

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ws10dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="精彩小视频"
            android:textColor="@color/c_333333"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="@dimen/ws9dp"
            android:layout_height="@dimen/ws10dp"
            android:layout_marginLeft="@dimen/ws10dp"
            android:src="@mipmap/allow_right" />


    </LinearLayout>

    <com.juejinchain.android.view.CustomRecyclerview
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ws12dp"/>

    <View
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws5dp"
        android:background="#f3f4f5" />
</LinearLayout>