<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.newsuper.t.consumer.widget.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/theme_red"
        android:layout_height="@dimen/toolbar_height"/>
    <LinearLayout
        android:id="@+id/ll_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="225dp"
        android:visibility="gone">

        <com.newsuper.t.consumer.widget.RefreshThirdStepView
            android:id="@+id/loading_view"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/top_loading" />

        <LinearLayout
            android:id="@+id/ll_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/expression2" />

            <TextView
                android:id="@+id/tv_fail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="获取数据失败"
                android:textColor="@color/text_color_57"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_btn_reload"
                android:text="重新获取"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="会员卡详情"
            android:textSize="16sp"
            android:textColor="#373737"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e7e7e7"/>
        <WebView
            android:id="@+id/webview_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:text="图文介绍"
            android:textSize="16sp"
            android:textColor="#373737"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e7e7e7"/>
        <ImageView
            android:id="@+id/iv_card"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:layout_height="200dp"
            android:layout_marginBottom="100dp"
            android:src="@mipmap/vipcard"/>
    </LinearLayout>
    </ScrollView>

</LinearLayout>