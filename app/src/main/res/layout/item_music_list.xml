<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_song_play"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws60dp">

        <LinearLayout
            android:layout_toLeftOf="@+id/iv_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_marginLeft="@dimen/ws10dp"
                android:layout_marginRight="@dimen/ws10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_music_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="23"
                    android:maxLines="1"
                    android:text="不能说的秘密"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/ws15dp" />

                <TextView
                    android:id="@+id/tv_artist_name"
                    android:layout_marginTop="@dimen/ws5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周杰伦"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/ws12dp" />

            </LinearLayout>

            <com.newsuper.t.juejinbao.ui.song.view.AudioWaveView
                android:id="@+id/audioWaveView"
                android:layout_width="@dimen/ws20dp"
                android:layout_height="@dimen/ws20dp"
                android:layout_marginStart="@dimen/ws12dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/ws10dp"
            android:src="@mipmap/ic_play" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws0_5dp"
        android:layout_marginLeft="@dimen/ws10dp"
        android:layout_marginRight="@dimen/ws10dp"
        android:background="@color/c_f0f0f0"/>

</LinearLayout>