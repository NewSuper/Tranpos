<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <View
        android:background="@color/bg_popup"
        android:id="@+id/pop_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws150dp" />

    <RelativeLayout
        android:background="@drawable/shap_comments_detail_header"
        android:id="@+id/rl_close"
        android:layout_below="@id/pop_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws45dp">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/pop_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ws10dp"
            android:background="@drawable/shape_white_radiu_top_10"
            android:text="回复详情"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/ws16dp" />

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/pop_close"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ws45dp"
            android:paddingLeft="@dimen/ws14dp"
            android:paddingRight="@dimen/ws14dp"
            android:scaleType="center"
            android:src="@mipmap/close_icon" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_close"
        android:fillViewport="true"
        android:layout_alignParentBottom="true"
        android:layout_weight="7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ws0_5dp"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/activity_reply_picture_or_video_athre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ws15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/adapter_list_content_header"
                        android:layout_width="@dimen/ws35dp"
                        android:layout_height="@dimen/ws35dp"
                        android:layout_marginLeft="@dimen/ws16dp" />

                    <RelativeLayout
                        android:id="@+id/rl_name_like"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ws7dp"
                        android:layout_toRightOf="@id/adapter_list_content_header">

                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/adapter_list_content_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="以马内利"
                            android:textColor="@color/c_666666"
                            android:textSize="@dimen/ws14dp" />

                        <LinearLayout
                            android:id="@+id/adapter_list_content_like_click"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/adapter_list_content_like"
                                android:layout_width="@dimen/ws16dp"
                                android:layout_height="@dimen/ws16dp"
                                android:layout_marginRight="@dimen/ws4dp"
                                android:background="@mipmap/icon_comments_no" />

                            <TextView
                                android:id="@+id/adapter_list_content_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/ws11dp"
                                android:text="0"
                                android:textColor="@color/c_999999"
                                android:textSize="@dimen/ws12dp" />
                        </LinearLayout>


                    </RelativeLayout>

                    <TextView
                        android:layout_below="@+id/rl_name_like"
                        android:id="@+id/adapter_list_content_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ws58dp"
                        android:layout_marginTop="@dimen/ws10dp"
                        android:layout_marginRight="@dimen/ws13dp"
                        android:text="的马卡龙拿了那十六年擦上来看"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/ws16dp" />

                    <LinearLayout
                        android:layout_marginTop="@dimen/ws10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/adapter_list_content_content"
                        android:layout_marginLeft="@dimen/ws58dp"
                        android:layout_marginBottom="@dimen/ws7dp"
                        android:layout_toRightOf="@+id/listitem_recoment_header"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/adapter_list_content_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/ws5dp"
                            android:text="0小时前"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/ws12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="·"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/ws12dp" />
                        <!--android:background="@drawable/shape_fbf6ea_radius_100"-->
                        <TextView
                            android:layout_marginLeft="@dimen/ws5dp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/bg_reply"
                            android:id="@+id/adapter_list_content_reply"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/ws20dp"
                            android:paddingLeft="@dimen/ws10dp"
                            android:paddingRight="@dimen/ws10dp"
                            android:text="回复"
                            android:textColor="@color/c_FF5500"
                            android:textSize="@dimen/ws12dp" />
                    </LinearLayout>

                </RelativeLayout>






                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ws0_5dp"
                    android:background="@color/line_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ws15dp"
                    android:layout_marginTop="@dimen/ws15dp"
                    android:text="全部回复"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/ws16dp" />
            </LinearLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/activity_reply_picture_or_video_athre"
                android:layout_marginBottom="@dimen/ws43dp"
                android:fillViewport="true"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/small_video_pop_comments_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ws15dp">

                    </android.support.v7.widget.RecyclerView>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ws30dp">

                        <ProgressBar
                            android:id="@+id/loading_progressbar"
                            android:layout_width="@dimen/ws20dp"
                            android:layout_height="@dimen/ws20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:indeterminateDrawable="@drawable/picture_content_load"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/small_video_pop_comments_list_more"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/ws10dp"
                            android:gravity="center"
                            android:text="没有更多回复了"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/ws14dp"
                            android:visibility="invisible" />
                    </RelativeLayout>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/small_video_pop_comments_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/activity_reply_picture_or_video_athre"
                android:layout_marginTop="@dimen/ws0_5dp"
                android:layout_marginBottom="@dimen/ws43dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/empty_small_video_comment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ws10dp"
                    android:text="暂无相关回复~"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/ws13dp" />
            </LinearLayout>


        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/ws9dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/model_activity_micro_video_edit"
            style="@null"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws34dp"
            android:layout_marginLeft="@dimen/ws9dp"
            android:layout_marginRight="@dimen/ws61dp"
            android:background="@drawable/shap_line_cccccc_round_100"
            android:drawableLeft="@mipmap/icon_my_reply_edtit"
            android:drawablePadding="@dimen/ws7dp"
            android:gravity="center_vertical"
            android:hint="回复评论..."
            android:maxLength="100"
            android:paddingLeft="@dimen/ws11dp"
            android:paddingRight="@dimen/ws5dp"
            android:textColor="@color/c_333333"
            android:textColorHint="@color/c_999999"
            android:textSize="@dimen/ws13dp" />

        <TextView
            android:id="@+id/small_video_pop_comments_commit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ws34dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="@dimen/ws15dp"
            android:text="发布"
            android:textColor="#FF5500"
            android:textSize="@dimen/ws14dp" />
    </RelativeLayout>

</RelativeLayout>