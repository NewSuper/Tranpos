<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.newsuper.t.consumer.widget.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">
    </com.newsuper.t.consumer.widget.CustomToolbar>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="#fffea257"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_title"
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_invite"/>
            <ImageView
                android:id="@+id/tv_invite"
                android:layout_width="250dp"
                android:layout_height="49dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:src="@mipmap/icon_invite3x"/>
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:background="@mipmap/icon_invite_num">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"
                    android:textSize="18sp"
                    android:text="已邀请"/>
                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FD603F"
                    android:layout_gravity="center"
                    android:gravity="top"
                    android:textSize="22sp"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"
                    android:textSize="18sp"
                    android:text="人"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="#活动规则#"
                android:textColor="#ffc05626"
                android:textSize="17sp"
                />
            <TextView
                android:id="@+id/tv_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#C05626"
                android:textSize="14sp"
                android:lineSpacingExtra="5dp"
                android:text="活动规则"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ll_fail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/white">
        <ImageView
            android:layout_width="212dp"
            android:layout_height="86dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:src="@mipmap/pic_nolocation_2x"/>
        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_gravity="center"
            android:textColor="@color/text_color_66"
            android:textSize="14sp"
            android:lineSpacingExtra="5dp"
            android:text="暂未开启邀请好友送红包活动，敬请期待"/>
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="返回"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/theme_red"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_location_fail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar"
        android:background="@color/white"
        android:visibility="gone">
        <ImageView
            android:layout_width="212dp"
            android:layout_height="86dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:src="@mipmap/pic_nolocation_2x"/>
        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="定位未开启，请检测定位或者开启定位服务"
            android:textColor="#ff666666"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_open"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/theme_red"
            android:text="开启定位"/>
    </LinearLayout>
</RelativeLayout>
