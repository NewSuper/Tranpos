<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="@dimen/dp_350"
        android:background="@drawable/shape_white_5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_27"
            android:background="@drawable/shape_1ec1b3_3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="挂单信息"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/c_1EC1B3"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:paddingLeft="@dimen/dp_13"
                        android:text="序号"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:text="单号"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="时间"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="金额"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="数量"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="收银员"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_9" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_guadanInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/c_1EC1B3"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:paddingLeft="@dimen/dp_13"
                        android:text="序号"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:text="条码"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="商品"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="数量"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="售价"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_9" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="小计"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_9" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_guadanGoods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_allUpdate"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_26"
                    android:layout_marginLeft="222dp"
                    android:layout_weight="1"
                    android:background="@drawable/layerlist_a556fe"
                    android:text="取单"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13" />

                <Button
                    android:id="@+id/btn_increUpdate"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_26"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:background="@drawable/layerlist_00b3ff"
                    android:text="删除"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13" />

                <Button
                    android:id="@+id/btn_close"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_26"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/layerlist_a9afb3"
                    android:text="取消"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>