<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_F5">

    <com.newsuper.t.consumer.widget.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/theme_red"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="联系人"
                android:textSize="15sp"
                android:textColor="@color/text_color_33"/>

            <EditText
                android:id="@+id/et_join_name"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:background="@color/transparent"
                android:hint="请输入联系人"
                android:textColorHint="#BEBEBE"
                android:textSize="15sp"
                android:textColor="@color/text_color_33"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="#F2F2F2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="联系电话 "
                android:textSize="15sp"
                android:textColor="@color/text_color_33"/>

            <EditText
                android:id="@+id/et_join_phone"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:background="@color/transparent"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:textColorHint="#BEBEBE"
                android:textSize="15sp"
                android:textColor="@color/text_color_33"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="#F2F2F2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="联系地址"
                android:textSize="15sp"
                android:textColor="@color/text_color_33"/>

            <EditText
                android:id="@+id/et_join_address"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:background="@color/transparent"
                android:hint="请输入联系地址"
                android:textColorHint="#BEBEBE"
                android:textSize="15sp"
                android:textColor="@color/text_color_33"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="#F2F2F2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="备注"
                android:textSize="15sp"
                android:textColor="@color/text_color_33"/>

            <EditText
                android:id="@+id/et_join_dec"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:background="@color/transparent"
                android:hint="请输入备注"
                android:textColorHint="#BEBEBE"
                android:textSize="15sp"
                android:textColor="@color/text_color_33"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="#F2F2F2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="加盟城市"
                android:textSize="15sp"
                android:textColor="@color/text_color_33"/>

            <EditText
                android:id="@+id/et_join_city"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:background="@color/transparent"
                android:hint="请输入加盟城市"
                android:textColorHint="#BEBEBE"
                android:textSize="15sp"
                android:textColor="@color/text_color_33"/>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_join"
        android:layout_width="323dp"
        android:layout_height="45dp"
        android:background="@color/theme_red"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="45dp"
        android:text="提交"
        android:textSize="15sp"
        android:textColor="@color/white"/>
</LinearLayout>