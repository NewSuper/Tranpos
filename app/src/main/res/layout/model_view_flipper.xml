<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ws50dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/model_view_filpper_bg"
        android:layout_width="@dimen/ws30dp"
        android:layout_height="@dimen/ws30dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/model_view_filpper_context"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/ws15dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/ws14sp" />
</LinearLayout>
