<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_root"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_raffle_bg"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bg_raffle"
                />
            <ImageView
                android:id="@+id/tv_win"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_win_prize"
                />

            <RelativeLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:id="@+id/reward_content"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:background="@mipmap/bg_raffle_dialog"
                >
                <ImageView
                    android:id="@+id/img_close"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/ws10dp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_raffle_close"
                    />

                <TextView
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:layout_above="@+id/ll_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:id="@+id/title"
                    android:textSize="@dimen/ws18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="恭喜您获得" />

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:id="@+id/ll_content"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textSize="@dimen/ws30dp"
                        android:layout_below="@+id/title"
                        android:id="@+id/tv_reward_coin"
                        android:layout_marginLeft="@dimen/ws5dp"
                        android:textColor="@color/c_F2FF00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tv_label"
                        android:layout_toRightOf="@+id/tv_label"
                        android:text="1" />

                    <TextView
                        android:textStyle="bold"
                        android:textSize="@dimen/ws17dp"
                        android:layout_below="@+id/title"
                        android:id="@+id/tv_reward_coin_label"
                        android:layout_marginLeft="@dimen/ws5dp"
                        android:textColor="@color/c_F2FF00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tv_label"
                        android:layout_toRightOf="@+id/tv_label"
                        android:text="个掘金宝" />

                </LinearLayout>

                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="@dimen/ws10dp"
                    android:paddingTop="@dimen/ws10dp"
                    android:paddingLeft="@dimen/ws30dp"
                    android:paddingRight="@dimen/ws30dp"
                    android:id="@+id/tv_enter"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看视频立即领取"
                    android:textColor="@color/c_FF5912"
                    android:background="@drawable/shap_line_ff6600_round_100"
                    android:textStyle="bold"
                    />



            </RelativeLayout>

            <ImageView
                android:id="@+id/img_gold"
                android:layout_marginBottom="30dp"
                android:layout_alignBottom="@+id/reward_content"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_gold"
                />

        </RelativeLayout>



        <FrameLayout
            android:layout_marginTop="-80dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/reward_content"
            android:id="@+id/ad_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_radius" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/loading_progressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ProgressBar
            android:layout_width="@dimen/ws50dp"
            android:layout_height="@dimen/ws50dp"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/loading_login_black" />
    </LinearLayout>



</RelativeLayout>