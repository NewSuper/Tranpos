<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipChildren="false">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/root_container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/abl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <LinearLayout
                    android:id="@+id/ll_shop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:clipChildren="false"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/iv_bg"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="#6F7584"
                        android:clipChildren="false">
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="-30dp"
                        android:elevation="10dp"
                        android:background="@drawable/layer_shop_info"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:clipChildren="false"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="54dp"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="1dp"/>
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/iv_header"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:scaleType="fitXY"
                                app:riv_corner_radius="4dp"
                                app:riv_oval="false"
                                android:src="@mipmap/store_logo_default"
                                android:layout_marginTop="-44dp"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="1dp"/>
                            <ImageView
                                android:id="@+id/iv_icon_collect"
                                android:layout_width="54dp"
                                android:layout_height="54dp"
                                android:src="@mipmap/collect_s_2x"
                                android:scaleType="fitXY"
                                android:layout_marginTop="-25dp"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_header_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:text="店铺名称"
                            android:textColor="@color/text_color_33"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tv_sale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/text_color_99"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="12sp" />
                        <LinearLayout
                            android:id="@+id/ll_act_tip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="15dp"
                            android:orientation="vertical">
                            <com.newsuper.t.consumer.widget.defineTopView.WGridView
                                android:id="@+id/gv_coupon_small"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_height="24dp"
                                android:horizontalSpacing="10dp"
                                android:layout_marginBottom="10dp"
                                android:numColumns="3"/>
                            <LinearLayout
                                android:id="@+id/ll_act"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="45dp"
                                android:layout_marginRight="45dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:visibility="gone">
                                <ImageView
                                    android:id="@+id/iv_item"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_marginRight="5dp"/>
                                <TextView
                                    android:id="@+id/tv_item"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_color_33"
                                    android:textSize="13sp"
                                    android:ellipsize="end"
                                    android:maxLines="1"/>
                                <TextView
                                    android:id="@+id/tv_act_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/text_color_66"
                                    android:textSize="12sp" />
                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:src="@mipmap/icon_down_2x" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_notice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/text_color_99"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textSize="12sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_act_info"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="vertical">
                            <android.support.v4.widget.NestedScrollView
                                android:id="@+id/sl_act_info"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:padding="15dp"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/tv_gao"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"
                                        android:textColor="@color/text_color_99"/>
                                    <com.newsuper.t.consumer.widget.defineTopView.WGridView
                                        android:id="@+id/gv_coupon_big"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:horizontalSpacing="10dp"
                                        android:verticalSpacing="10dp"
                                        android:layout_marginTop="10dp"
                                        android:numColumns="2"/>
                                    <LinearLayout
                                        android:id="@+id/ll_act_detail"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="25dp"
                                        android:orientation="vertical">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/text_color_33"
                                            android:textSize="15sp"
                                            android:text="优惠信息"/>

                                    </LinearLayout>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/text_color_33"
                                        android:layout_marginTop="25dp"
                                        android:textSize="15sp"
                                        android:text="配送信息"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="10dp"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:id="@+id/tv_basePrice"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="10dp"
                                            android:textColor="@color/text_color_66"
                                            android:textSize="13sp"
                                            android:text="起送价"/>
                                        <TextView
                                            android:id="@+id/tv_delivery_fee"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/text_color_66"
                                            android:textSize="13sp"
                                            android:text="配送费"/>
                                    </LinearLayout>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/text_color_33"
                                        android:layout_marginTop="25dp"
                                        android:textSize="15sp"
                                        android:text="店铺公告"/>
                                    <TextView
                                        android:id="@+id/tv_gonggao"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:textColor="@color/text_color_66"
                                        android:text="今日本店新开业，进店消费的话届时会有很多优惠折扣，希望大家进店选购~"
                                        android:textSize="13sp"/>
                                </LinearLayout>

                            </android.support.v4.widget.NestedScrollView>
                            <LinearLayout
                                android:id="@+id/ll_close"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:padding="10dp">
                                <ImageView
                                    android:id="@+id/iv_close"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/icon_cart_pull_up"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <android.support.v7.widget.Toolbar
                    android:id="@+id/tb_shop"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:titleMargin="0dp"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    <LinearLayout
                        android:id="@+id/rl_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="30dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">
                        <ImageView
                            android:id="@+id/iv_back"
                            android:layout_width="14dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon_back" />
                        <LinearLayout
                            android:id="@+id/ll_search_goods"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/shape_search_store"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="11dp"
                                android:layout_height="11dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/icon_shop_search" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:background="@null"
                                android:enabled="false"
                                android:gravity="center|left"
                                android:hint="请输入关键字"
                                android:textColor="@color/black"
                                android:textColorHint="#999999"
                                android:textSize="13sp" />
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/iv_share"
                            android:layout_width="24dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/icon_shop_share" />
                    </LinearLayout>
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_f5"/>
            <android.support.design.widget.TabLayout
                android:id="@+id/tab_select_goods"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_tablayout"
                app:tabIndicatorHeight="2dp"
                app:tabIndicatorColor="@color/theme_red"
                app:tabSelectedTextColor="@color/text_color_33"
                app:tabTextAppearance="@style/TabLayoutTextStyle"
                app:tabTextColor="@color/text_color_99"/>
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_select_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        <com.newsuper.t.consumer.widget.ClickableFrameLayout
            android:id="@+id/fl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:clipChildren="false"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_manjian"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="#FFE6CF"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="12sp"
                    android:visibility="invisible" />
                <LinearLayout
                    android:id="@+id/ll_cart"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#212121"
                    android:clipChildren="false"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/show_cart"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:clipChildren="false"
                        android:layout_marginTop="-17dp"
                        android:layout_marginLeft="15dp">
                        <ImageView
                            android:id="@+id/imgCart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/icon_shopping_cart_grey" />
                        <TextView
                            android:id="@+id/tvCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/circle_red"
                            android:gravity="center"
                            android:textColor="#ffffff"
                            android:textSize="10sp"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:text="￥"
                        android:visibility="visible"/>
                    <TextView
                        android:id="@+id/tvCost"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="#ffffff"
                        android:textSize="23sp"
                        android:text="0"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tvTips"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:textColor="#ffffff"/>

                    <TextView
                        android:id="@+id/tvSubmit"
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:background="#df5458"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="选好了"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_shop_tip"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#b4212121"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:visibility="gone"/>
        </com.newsuper.t.consumer.widget.ClickableFrameLayout>
    </android.support.design.widget.CoordinatorLayout>
    <LinearLayout
        android:id="@+id/ll_order_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_marginTop="-40dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@drawable/shape_cart_order_tip_2"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_clock_2x"/>
        <TextView
            android:id="@+id/tv_order_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="现在预定，明天准时送达"/>
    </LinearLayout>
</RelativeLayout>

