<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#EBEBEB"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical">

    <com.newsuper.t.consumer.widget.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/theme_red"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact"
                android:textColor="@color/text_color_37"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/tv_customer_name"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@null"
                android:hint="如：黄先生"
                android:maxLength="20"
                android:paddingLeft="36dp"
                android:textColor="@color/text_color_37"
                android:textColorHint="@color/text_color_99"
                android:textSize="15sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.66dp"
            android:layout_marginLeft="20dp"
            android:background="#ffd6d6d6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_phone_number"
                android:textColor="@color/text_color_37"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/tv_customer_name_tel"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@null"
                android:hint="如：13800113800"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="20dp"
                android:textColor="@color/text_color_37"
                android:textColorHint="@color/text_color_99"
                android:textSize="15sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.66dp"
            android:layout_marginLeft="20dp"
            android:background="#ffd6d6d6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/shipping_address"
                android:textColor="@color/text_color_37"
                android:textSize="15sp"/>

            <LinearLayout
                android:id="@+id/ll_choose"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

              <!--  <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="7dp"
                    android:scaleType="center"
                    android:src="@mipmap/address_location_2"/>-->

                <TextView
                    android:id="@+id/tv_goods_address"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:enabled="true"
                    android:gravity="center|left"
                    android:hint="点我手动定位"
                    android:maxLength="20"
                    android:paddingLeft="20dp"
                    android:textColor="@color/text_color_37"
                    android:textColorHint="@color/text_color_99"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="19dp"
                    android:src="@mipmap/ic_go"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.66dp"
            android:layout_marginLeft="20dp"
            android:background="#ffd6d6d6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detailed_address"
                android:textColor="@color/text_color_37"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/tv_detail_address"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@null"
                android:hint="如：xxx小区xxx栋"
                android:maxLength="20"
                android:paddingLeft="20dp"
                android:textColor="@color/text_color_37"
                android:textColorHint="@color/text_color_99"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="14dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_bt_selector"
            android:text="@string/sure"
            android:textColor="@color/white"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="10dp"
            android:background="@drawable/shape_red_dotted_line"
            android:text="@string/delete_this_address"
            android:textColor="#ec5a5a"
            android:textSize="15sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="请您确保："
        android:textColor="@color/text_color_67"
        android:textSize="13sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="1）手机及微信的定位服务为开启状态"
        android:textColor="@color/text_color_67"
        android:textSize="13sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="2）允许微信获取您的位置信息权限"
        android:textColor="@color/text_color_67"
        android:textSize="13sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="如果出现无法定位的情况，首先请参考上方提示确保手机设置无误，若手机设置无误可尝试点击右上方刷新页面重试"
        android:textColor="@color/text_color_67"
        android:textSize="13sp"/>
</LinearLayout>

