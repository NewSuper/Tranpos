<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_goods_bg">
    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@mipmap/store_logo_default"/>
    <LinearLayout
        android:id="@+id/ll_time_limit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="#FDF7CC"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="距离开始"
            android:textColor="@color/text_color_37"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/theme_red"
            android:textSize="14sp"
            android:text="01:10:10"/>
        <ImageView
            android:id="@+id/iv_pull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_cart_pull_down"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="规则说明"
            android:textSize="14sp"
            android:textColor="@color/text_color_37"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/text_color_37"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                android:text="整个活动期间每人限购"
                android:id="@+id/textView3" />
            <TextView
                android:id="@+id/tv_activity_limit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="5"
                android:gravity="center"
                android:textColor="#f87a7c"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/text_color_37"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                android:text="每人每天限购"/>
            <TextView
                android:id="@+id/tv_limit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="5"
                android:gravity="center"
                android:textColor="#f87a7c"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/text_color_37"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                android:text="活动时间:"/>
            <TextView
                android:id="@+id/tv_activity_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/text_color_37"
                android:gravity="center"
                android:textSize="14sp"
                android:text="2017-06-30"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/text_color_37"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                android:text="活动时间段："/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/text_color_37"
                android:gravity="center"
                android:textSize="14sp"
                android:text="09:30 - 17：00"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_goods_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="visible">
        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:text="商品名称"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_today_price"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:text="商品限购"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_buy_limit"/>

        <TextView
            android:id="@+id/tv_sale_count"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:text="已售600"
            android:textSize="16sp"
            android:textColor="@color/text_color_99"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <TextView
                android:id="@+id/tv_now_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DF5458"
                android:text="￥10"
                android:layout_gravity="bottom"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_before_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_99"
                android:layout_marginLeft="10dp"
                android:text="￥15"
                android:layout_gravity="bottom"
                android:textSize="16sp"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/ll_add_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/iv_delete_goods"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/button_minus"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_37"
                    android:textSize="16sp"
                    android:text="1" />
                <ImageView
                    android:id="@+id/iv_add_goods"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/button_add"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_goods_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/text_color_99"
            android:text="选用上等米粉精制而成，好吃不贵，吃了还想吃欢迎大家品尝粉精制而成，好吃不贵，吃了还想粉精制而成，好吃不。"/>
    </LinearLayout>
</LinearLayout>
