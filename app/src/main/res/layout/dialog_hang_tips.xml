<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/dp_220"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_5dp">
        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_27"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:text="@string/txt_hang_title"/>
            <FrameLayout
                android:id="@+id/fl_close"
                android:layout_width="@dimen/dp_30"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/close" />
            </FrameLayout>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您确定删除本笔挂单吗？"
            android:textColor="@color/color_2F2F2F"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rl_top"
            android:layout_marginTop="@dimen/dp_45"/>
        <com.transpos.market.view.RoundButton
            android:id="@+id/btn_confirm"
            android:layout_width="@dimen/dp_92"
            android:layout_height="@dimen/dp_28"
            app:btnCornerRadius="@dimen/dp_2"
            android:text="确定(Enter)"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:btn_gradient_orientation="left_right"
            app:btn_is_gradient="true"
            app:btn_gradient_colors="#FF3510,#FF582B"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tips"
            android:layout_marginTop="@dimen/dp_49"
            android:layout_marginLeft="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_15"/>
        <com.transpos.market.view.RoundButton
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/dp_92"
            android:layout_height="@dimen/dp_28"
            app:btnCornerRadius="@dimen/dp_2"
            android:text="取消(Esc)"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:btn_gradient_orientation="left_right"
            app:btn_is_gradient="true"
            app:btn_gradient_colors="#AAAFB4,#BEC3C6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tips"
            android:layout_marginTop="@dimen/dp_49"
            android:layout_marginRight="@dimen/dp_12"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>