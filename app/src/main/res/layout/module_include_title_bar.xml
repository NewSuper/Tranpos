<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/ll_bar">


        <View
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws45dp">

            <ImageView
                android:id="@+id/module_include_title_bar_return"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/ws15dp"
                android:paddingRight="@dimen/ws15dp"
                android:src="@mipmap/icon_bar_title_return" />

            <TextView
                android:id="@+id/module_include_title_bar_left_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/module_include_title_bar_return"
                android:gravity="center"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/ws16sp" />

            <TextView
                android:id="@+id/module_include_title_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text=""
                android:textColor="@color/c_333333"
                android:textSize="@dimen/ws16sp" />

            <TextView
                android:id="@+id/module_include_title_bar_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ws15dp"
                android:gravity="center"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/ws13sp" />

            <ImageView
                android:id="@+id/module_include_title_bar_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/ws15dp"
                android:paddingRight="@dimen/ws15dp" />

            <ImageView
                android:id="@+id/module_include_title_bar_set"
                android:layout_toLeftOf="@id/module_include_title_bar_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/ws15dp"
                android:paddingRight="@dimen/ws15dp" />
        </RelativeLayout>

    </LinearLayout>
</layout>
