<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical">

    <com.newsuper.t.consumer.widget.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">
    </com.newsuper.t.consumer.widget.CustomToolbar>
    <LinearLayout
        android:id="@+id/ll_step_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <ImageView
                style="@style/image_login"
                android:layout_marginRight="10dp"
                android:src="@mipmap/login_icon_username2x" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_input1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="请输入手机号"
                    android:background="@null"
                    android:inputType="numberSigned"
                    android:textColor="@color/text_color_37"
                    android:textColorHint="@color/text_color_99"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv_pass1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/search_edt_close"
                    android:visibility="invisible"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="我已阅读并同意"
                android:textColor="@color/text_color_99"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_agreement1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/agreement"
                android:textColor="@color/theme_red"
                android:textSize="12sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_next1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_btn_login"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_yuyin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/theme_red"
            android:text="获取语音验证码"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_step_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <ImageView
                style="@style/image_login"
                android:layout_marginRight="10dp"
                android:src="@mipmap/login_icon_verification2x" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_input2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="请输入验证码"
                    android:background="@null"
                    android:inputType="numberSigned"
                    android:textColor="@color/text_color_37"
                    android:textColorHint="@color/text_color_99"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv_pass2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/search_edt_close"
                    android:visibility="invisible"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_get_code2"
                style="@style/text_code"
                android:layout_width="80dp"
                android:layout_height="35dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="我已阅读并同意"
                android:textColor="@color/text_color_99"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_agreement2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/agreement"
                android:textColor="@color/theme_red"
                android:textSize="12sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_next2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_btn_login"
            android:text="提交验证码"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_yuyin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/theme_red"
            android:text="获取语音验证码"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_step_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <ImageView
                style="@style/image_login"
                android:layout_marginRight="10dp"
                android:src="@mipmap/login_icon_password2x" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_input3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="请输入6~20个字符"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:textColor="@color/text_color_37"
                    android:textColorHint="@color/text_color_99"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv_pass3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/search_edt_close"
                    android:visibility="invisible"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="我已阅读并同意"
                android:textColor="@color/text_color_99"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_agreement3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/agreement"
                android:textColor="@color/theme_red"
                android:textSize="12sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_next3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_btn_login"
            android:text="注 册"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/theme_red"
            android:text="获取语音验证码"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tv_step1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@mipmap/login_icon_circle_s2x"/>
        <View
            android:id="@+id/tv_line1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/text_color_99"/>
        <ImageView
            android:id="@+id/tv_step2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@mipmap/login_icon_circle_n2x" />
        <View
            android:id="@+id/tv_line2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@color/text_color_99"/>
        <ImageView
            android:id="@+id/tv_step3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@mipmap/login_icon_circle_n2x" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="手机号"
            android:textSize="13sp"
            android:textColor="@color/theme_red" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="短信验证码"
            android:textSize="13sp"
            android:textColor="@color/text_color_82" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="输入密码"
            android:textSize="13sp"
            android:textColor="@color/text_color_82" />

    </LinearLayout>

</LinearLayout>
