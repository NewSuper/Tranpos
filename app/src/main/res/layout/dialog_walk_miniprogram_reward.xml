<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_walk_mini_program_reward"
        />
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/tv_reward_count"
        app:layout_constraintBottom_toTopOf="@+id/img_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="奖励等价为12个掘金宝"
        android:textSize="17dp"
        android:textColor="@color/c_FFE5CC"
        android:layout_marginBottom="25dp"
        />


    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/img_goods"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/label"
        android:layout_marginBottom="30dp"
        android:textColor="@color/c_D94038"
        android:text="上市后奖励价值会再次翻倍"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_earn_money"
        />

    <TextView
        android:id="@+id/tv_earn_money"
        android:gravity="center"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_bg"  android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="更多赚钱秘籍"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bg_worth_jjb"
        android:textColor="@color/c_D36C2F"
        />


    <ImageView
        android:id="@+id/img_close"
        android:padding="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_mini_dialog_close"
        />


</android.support.constraint.ConstraintLayout>