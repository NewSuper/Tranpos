<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws245dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_music_like_bg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws245dp"
            android:background="#80000000"/>

        <RelativeLayout
            android:id="@+id/rl_classify"
            android:layout_width="@dimen/ws134dp"
            android:layout_height="@dimen/ws134dp"
            android:layout_marginTop="@dimen/ws77dp">

            <ImageView
                android:id="@+id/iv_class_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/iv_classify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ws10dp"
                android:layout_marginRight="@dimen/ws10dp"
                android:layout_marginTop="@dimen/ws5dp"
                android:layout_marginBottom="@dimen/ws15dp"
                android:scaleType="centerCrop"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws134dp"
            android:layout_marginTop="@dimen/ws77dp"
            android:layout_toRightOf="@+id/rl_classify"
            android:orientation="vertical"
            android:paddingLeft="@dimen/ws10dp"
            android:paddingRight="@dimen/ws10dp">

            <TextView
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/tv_classify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ws15dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/ws22dp"
                android:textStyle="bold" />

            <TextView
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ws10dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/ws14dp" />

            <TextView
                android:lines="1"
                android:ellipsize="end"
                android:id="@+id/tv_play_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ws20dp"
                android:drawableLeft="@mipmap/ic_play_start"
                android:drawablePadding="@dimen/ws5dp"
                android:text="0次播放"
                android:textColor="#fffafafa"
                android:textSize="@dimen/ws15dp" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_dec2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0次播放"
                android:textColor="#fffafafa"
                android:textSize="@dimen/ws15dp" />

        </LinearLayout>




    </RelativeLayout>
</layout>