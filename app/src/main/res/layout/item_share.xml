<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/JJ.WidthFill.Vertical"
    android:paddingVertical="10dp">

    <RelativeLayout
        android:id="@id/relt_id1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_circle">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_app" />
    </RelativeLayout>

    <TextView
        android:gravity="center"
        android:id="@+id/recommend"
        style="@style/JJ.Label.White.Little"
        android:layout_alignRight="@id/relt_id1"
        android:layout_marginRight="-20dp"
        android:background="@mipmap/bg_share_tag"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"
        android:text="推荐" />

    <TextView
        android:id="@+id/name"
        style="@style/JJ.Label.Minor.Middle"
        android:layout_below="@id/relt_id1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="索粉神器" />
</RelativeLayout>