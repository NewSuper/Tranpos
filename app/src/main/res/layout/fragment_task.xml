<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws38dp"
            android:background="@mipmap/ic_task_bg">

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/task_table"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:tl_indicator_width="@dimen/ws15dp"
                app:tl_indicator_corner_radius="@dimen/ws2dp"
                app:tl_tab_padding="@dimen/ws10dp"
                app:tl_textSelectColor="@color/white"
                app:tl_textUnselectColor="@color/white"
                app:tl_textsize="@dimen/ws15sp" />

            <ImageButton
                android:id="@+id/img_share"
                android:layout_width="@dimen/ws40dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:src="@mipmap/white_share" />

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</layout>