<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <com.juejinchain.android.view.LoadingView
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/srl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v4.widget.NestedScrollView
                        android:layout_above="@+id/bottom_controller"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/ws126dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/ws50dp"
                                    android:src="@mipmap/ic_read_bg"
                                    android:scaleType="fitXY"/>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@mipmap/banner_bg"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/ic_music_banner"/>

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/ws75dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/tv_like"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="收藏歌曲"
                                    android:drawableTop="@mipmap/ic_music_like"
                                    android:textSize="@dimen/ws14dp"
                                    android:drawablePadding="@dimen/ws5dp"
                                    android:textColor="@color/c_333333"
                                    android:gravity="center"/>

                                <TextView
                                    android:id="@+id/tv_history"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="历史听歌"
                                    android:drawablePadding="@dimen/ws5dp"
                                    android:drawableTop="@mipmap/ic_music_history"
                                    android:textSize="@dimen/ws14dp"
                                    android:textColor="@color/c_333333"
                                    android:gravity="center"/>

                                <TextView
                                    android:id="@+id/tv_hot"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="新歌速递"
                                    android:drawablePadding="@dimen/ws5dp"
                                    android:drawableTop="@mipmap/ic_music_hot"
                                    android:textSize="@dimen/ws14dp"
                                    android:textColor="@color/c_333333"
                                    android:gravity="center"/>

                                <TextView
                                    android:id="@+id/tv_gequbangdan"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="歌曲榜单"
                                    android:drawablePadding="@dimen/ws5dp"
                                    android:drawableTop="@mipmap/gequbangdan"
                                    android:textSize="@dimen/ws14dp"
                                    android:textColor="@color/c_333333"
                                    android:gravity="center"/>

                            </LinearLayout>

                            <!--广告-->
                            <LinearLayout
                                android:layout_marginTop="20dp"
                                android:id="@+id/ll_ad1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/ws15dp"
                                android:layout_marginRight="@dimen/ws15dp"
                                android:layout_marginBottom="@dimen/ws10dp"
                                android:background="@drawable/base_white_shadow"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/ws10dp"
                                android:paddingBottom="@dimen/ws10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="所有数据均来自其他第三方网站"
                                    android:textColor="@color/app_color"
                                    android:textSize="18dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="@dimen/ws8dp"
                                    android:gravity="center"
                                    android:text="仅提供数据查询服务不提供任何音频储存和贩卖服务"
                                    android:textColor="#333"
                                    android:textSize="@dimen/ws12dp" />


                            </LinearLayout>


                            <!--推荐歌单-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp">

                                <TextView
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="12dp"
                                    android:text="推荐歌单"
                                    android:textColor="#010101"
                                    android:textSize="18dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="9dp">

                                    <TextView
                                        android:id="@+id/tv_more_tuijiangedan"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="更多"
                                        android:textColor="#666666"
                                        android:textSize="14dp" />

                                    <ImageView
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="6dp"
                                        android:layout_height="11dp"
                                        android:background="@mipmap/next"/>
                                </LinearLayout>


                            </RelativeLayout>

                            <!--<android.support.v7.widget.RecyclerView-->
                                <!--android:id="@+id/rv_hot"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:paddingLeft="@dimen/ws4dp"-->
                                <!--android:paddingRight="@dimen/ws4dp"/>-->

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_tuijiangedan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <!--分类专区-->
                            <RelativeLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">

                                <TextView
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="12dp"
                                    android:text="分类专区"
                                    android:textColor="#010101"
                                    android:textSize="18dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="9dp">

                                    <TextView
                                        android:id="@+id/tv_more_fenleizhuanqu"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="更多"
                                        android:textColor="#666666"
                                        android:textSize="14dp" />

                                    <ImageView
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="6dp"
                                        android:layout_height="11dp"
                                        android:background="@mipmap/next"/>
                                </LinearLayout>


                            </RelativeLayout>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_fenleizhuanqu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>


                            <!--最新专辑-->
                            <RelativeLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">

                                <TextView
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="12dp"
                                    android:text="最新专辑"
                                    android:textColor="#010101"
                                    android:textSize="18dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="9dp">

                                    <TextView
                                        android:id="@+id/tv_more_zuixinzhuanji"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="更多"
                                        android:textColor="#666666"
                                        android:textSize="14dp" />

                                    <ImageView
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="6dp"
                                        android:layout_height="11dp"
                                        android:background="@mipmap/next"/>
                                </LinearLayout>


                            </RelativeLayout>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_zuixinzhuanji"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <!--大家在听-->
                            <RelativeLayout
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">

                                <TextView
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="12dp"
                                    android:text="大家在听"
                                    android:textColor="#010101"
                                    android:textSize="18dp" />



                            </RelativeLayout>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_music"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>


