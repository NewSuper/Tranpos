                                    android:textSize="@dimen/app_text3" />


                                <LinearLayout
                                    android:id="@+id/zk"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"

                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/ws10dp"
                                        android:layout_height="@dimen/ws12dp"
                                        android:background="@mipmap/down" />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/ws5dp"
                                        android:text="展开全部"
                                        android:textColor="#77a8ee"
                                        android:textSize="@dimen/app_text3" />

                                </LinearLayout>

                            </LinearLayout>

                            <!--免责声明2-->
                            <LinearLayout
                                android:id="@+id/mz2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/ws10dp"
                                android:layout_marginTop="@dimen/ws20dp"
                                android:layout_marginRight="@dimen/ws10dp"
                                android:layout_marginBottom="@dimen/ws20dp"
                                android:background="#efefef"
                                android:orientation="vertical"
                                android:padding="@dimen/ws20dp"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="免责声明"
                                    android:textColor="@color/app_text3"
                                    android:textSize="@dimen/app_text2"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/ws15dp"
                                    android:lineSpacingExtra="@dimen/ws3dp"
                                    android:text="        掘金宝中的音乐內容均以非人工检索方式、根据您键入或选择的关键字自动生成到第三方网页的链接，除注明之服务条款外，其他一切因使用掘金宝可能遭致的意
