<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_picture_content_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/adapter_picture_content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ws13dp"
        android:layout_marginTop="@dimen/ws15dp"
        android:layout_marginRight="@dimen/ws22dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="掘金宝与其他咨询打碎的撒大大"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/ws18sp" />

    <LinearLayout
        android:id="@+id/adapter_picture_content_type_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws70_5dp"
        android:layout_marginLeft="@dimen/ws15dp"
        android:layout_marginTop="@dimen/ws15dp"
        android:layout_marginRight="@dimen/ws15dp"
        android:orientation="horizontal"
        android:visibility="gone">


        <com.newsuper.t.juejinbao.view.RoundImageView
            android:id="@+id/adapter_picture_content_img_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/ws2dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,21:12"
            app:srcCompat="@mipmap/default_img" />

        <com.newsuper.t.juejinbao.view.RoundImageView
            android:id="@+id/adapter_picture_content_img_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/ws2dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,21:12"
            app:srcCompat="@mipmap/default_img" />

        <RelativeLayout
            android:layout_width="@dimen/ws0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.newsuper.t.juejinbao.view.RoundImageView
                android:id="@+id/adapter_picture_content_img_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="H,21:12"
                app:srcCompat="@mipmap/default_img" />

            <LinearLayout
                android:layout_width="@dimen/ws49dp"
                android:layout_height="@dimen/ws16dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/ws4dp"
                android:layout_marginBottom="@dimen/ws4dp"
                android:background="@drawable/shape_black_99000000_radius_100"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/ws10dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_small_picture" />

                <TextView
                    android:id="@+id/adapter_picture_content_img_three_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="0图"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ws12sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/adapter_picture_content_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws152dp"
        android:layout_marginLeft="@dimen/ws15dp"
        android:layout_marginTop="@dimen/ws23dp"
        android:layout_marginRight="@dimen/ws15dp"
        android:visibility="gone">

        <com.newsuper.t.juejinbao.view.RoundImageView
            android:id="@+id/adapter_picture_content_type_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,21:12"
            app:srcCompat="@mipmap/default_img" />

        <LinearLayout
            android:layout_width="@dimen/ws49dp"
            android:layout_height="@dimen/ws16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/ws4dp"
            android:layout_marginBottom="@dimen/ws4dp"
            android:background="@drawable/shape_black_99000000_radius_100"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/ws10dp"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_small_picture" />

            <TextView
                android:id="@+id/adapter_picture_content_img_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="0图"
                android:textColor="@color/white"
                android:textSize="@dimen/ws12sp" />
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ws15dp"
        android:layout_marginTop="@dimen/ws15dp"
        android:layout_marginBottom="@dimen/ws15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adapter_picture_content_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ws4dp"
            android:text="热"
            android:textColor="@color/c_ff0600"
            android:textSize="@dimen/ws10sp" />

        <TextView
            android:id="@+id/adapter_picture_content_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="掘金宝资讯"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/ws12sp" />

        <TextView
            android:id="@+id/adapter_picture_content_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ws10dp"
            android:text="阅读  14.07w"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/ws12sp" />

        <TextView
            android:id="@+id/adapter_picture_content_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ws10dp"
            android:text="一小时前"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/ws12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ws10dp"
            android:text="图集"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/ws12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws0_5dp"
        android:layout_marginLeft="@dimen/ws10dp"
        android:layout_marginRight="@dimen/ws10dp"
        android:background="@color/line_color" />
</LinearLayout>
