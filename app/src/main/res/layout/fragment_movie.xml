        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws40dp"
            android:background="@color/app_white">

            <!--筛选按钮-->
            <RelativeLayout
                android:id="@+id/rl_filter"
                android:layout_width="@dimen/ws80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#efefef"
                    android:layout_marginTop="@dimen/ws8dp"
                    android:layout_marginBottom="@dimen/ws8dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/ws12dp"
                        android:layout_height="@dimen/ws12dp"
                        android:background="@mipmap/movie_filter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 筛选"
                        android:textColor="@color/app_text2"
                        android:textSize="@dimen/ws15dp"/>


                </LinearLayout>

            </RelativeLayout>

            <com.flyco.tablayout.SlidingTabLayout
                android:layout_toLeftOf="@id/rl_filter"
                android:id="@+id/activity_home_page_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ws5dp"
                android:layout_marginRight="@dimen/ws10dp"
                app:tl_indicator_height="0dp"
                app:tl_indicator_width="0dp"
                app:tl_tab_padding="@dimen/ws10dp"
                app:tl_textBold="SELECT"
                app:tl_textSelectColor="@color/c_FF5500"
                app:tl_textUnselectColor="@color/app_text2"
                app:tl_textsize="18dp" />

        </RelativeLayout>


