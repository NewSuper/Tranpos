<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--主题部分-->
        <LinearLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@drawable/bg_dialog_dependentresource">

            <!--标题-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ws50dp">

                <LinearLayout
                    android:layout_marginLeft="@dimen/ws10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="狮子王"
                        android:textSize="@dimen/app_text"
                        android:textColor="@color/app_color"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="的相关资源"
                        android:textSize="@dimen/app_text"
                        android:textColor="@color/app_text"
                        android:textStyle="bold"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_close"
                    android:layout_width="@dimen/ws40dp"
                    android:layout_height="@dimen/ws40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="@dimen/ws15dp"
                        android:layout_height="@dimen/ws15dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/icon_small_video_close"/>

                </RelativeLayout>




            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#efefef"/>

            <!--标签-->
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/ws10dp"
                android:id="@+id/rv_condition"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ws35dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#efefef"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:id="@+id/srl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!--列表-->
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </com.scwang.smartrefresh.layout.SmartRefreshLayout>

                <ImageView
                    android:id="@+id/img_loading_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerInside" />

            </RelativeLayout>





        </LinearLayout>

        <!--透明部分-->
        <RelativeLayout
            android:id="@+id/rl_blank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/rl_main" />

    </RelativeLayout>


</layout>
