<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_6">
    <TextView
        android:id="@+id/tv_receive_ways"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="@string/txt_shift_received_ways"
        android:textSize="@dimen/sp_9"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tv_receive_money"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="@string/txt_shift_received_money"
        android:textSize="@dimen/sp_9"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/dp_34"/>
    <TextView
        android:id="@+id/tv_receive_count"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintLeft_toRightOf="@id/tv_receive_ways"
        app:layout_constraintRight_toLeftOf="@+id/tv_receive_money"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="@string/txt_shift_received_count"
        android:textSize="@dimen/sp_9"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/dp_34"/>
    <TextView
        android:id="@+id/tv_pay_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/dp_22"
        android:textSize="@dimen/sp_9"
        android:textColor="@color/c_202020"/>
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/tv_receive_count"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/sp_9"
        android:textColor="@color/c_202020"/>
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/tv_receive_money"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/sp_9"
        android:textColor="@color/c_202020"/>
</android.support.constraint.ConstraintLayout>