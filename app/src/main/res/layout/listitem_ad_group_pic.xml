<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ad_intent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="HardcodedText">
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="5dp"-->
    <!--android:background="@color/c_F5F5F5"-->
    <!--/>-->

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws5dp"
        android:background="#f3f4f5"/>

    <TextView
        android:id="@+id/tv_listitem_ad_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/ad_title_color"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/layout_image_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_listitem_image1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_listitem_image2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_listitem_image3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="centerCrop" />
    </LinearLayout>


    <!--<ImageView-->
    <!--android:id="@+id/iv_listitem_icon"-->
    <!--android:layout_width="15dp"-->
    <!--android:layout_height="15dp"-->
    <!--android:layout_below="@id/iv_listitem_image"-->
    <!--android:layout_marginStart="3dp"-->
    <!--android:layout_marginLeft="3dp" />-->

    <LinearLayout
        android:id="@+id/tv_source_desc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/ws10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/tt_ad_tv"
            style="@style/JJ.Label.Light.Little"
            android:background="@drawable/shape_ad_radius"
            android:paddingHorizontal="2dp"
            android:text="广告"
            android:textColor="@color/ccc"
            android:textSize="8sp" />

        <ImageView
            android:id="@+id/iv_listitem_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/layout_image_group"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/tv_listitem_ad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="爱上……"
            android:textColor="@color/text_666666"
            android:textSize="10sp" />

        <!--tv_listitem_ad_source tv_listitem_ad_desc-->
        <Button
            android:id="@+id/btn_listitem_creative"
            android:layout_width="47dp"
            android:layout_height="22dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/shape_blun_radius"
            android:singleLine="true"
            android:text="立即下载"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone" />

        <!--==== 测试下载状态控制功能 begin ========-->
        <ImageButton
            android:id="@+id/btn_listitem_dislike"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@null"
            android:src="@mipmap/dislike_icon" />

        <!--==== 测试下载状态控制功能 end ========-->
    </LinearLayout>
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="5dp"-->
    <!--android:background="@color/c_F5F5F5"-->
    <!--/>-->

    <View
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws5dp"
        android:background="#f3f4f5"/>

</LinearLayout>