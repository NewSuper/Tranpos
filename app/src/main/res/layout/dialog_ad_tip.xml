<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/ws300dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:background="@drawable/shap_bg_500000_round_8"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dialog_config_edite_code"
        android:layout_width="@dimen/ws334dp"
        android:layout_height="wrap_content"
       >

        <RelativeLayout
            android:layout_below="@+id/dialog_config_edite_code_title"
            android:layout_width="@dimen/ws309dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-8dp"
            android:background="@drawable/shap_bg_white_round_8">
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_currentCar"
                style="@style/JJ.Label.Dark.Middle"
                android:layout_marginTop="20dp"
                android:singleLine="true"
                android:paddingHorizontal="10dp"
                android:text="游戏时长不足20秒，无法获得奖励" />

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_currentCar"
                android:id="@+id/tv_dotask_rewardCar"
                style="@style/JJ.Label.Dark.Middle"
                android:layout_marginTop="3dp"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:text="游戏期间需要有活跃操作哦~" />


            <android.support.v7.widget.AppCompatButton
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_dotask_rewardCar"
                android:layout_marginBottom="@dimen/ws10dp"
                android:layout_marginTop="@dimen/ws20dp"
                android:id="@+id/btn_back"
                android:layout_width="@dimen/ws170dp"
                android:layout_height="@dimen/ws30dp"
                android:gravity="center"
                android:background="@drawable/shape_yellow_radius"
                android:text="我知道了"
                android:textSize="13sp"
                android:textColor="@color/white"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/btn_exit"
                tools:ignore="MissingConstraints" />



        </RelativeLayout>

        <ImageView
            android:id="@+id/dialog_config_edite_code_title_bg"
            android:layout_width="@dimen/ws326dp"
            android:layout_height="@dimen/ws98dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_login_dialog_title_bg" />

        <TextView
            android:id="@+id/dialog_config_edite_code_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ws98dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="温馨提示"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/ws20sp" />
        <ImageView
            android:id="@+id/dialog_config_edite_code_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/ws25dp"
            android:paddingRight="@dimen/ws30dp"
            android:src="@mipmap/icon_login_dialog_title_close" />





    </RelativeLayout>
</LinearLayout>
