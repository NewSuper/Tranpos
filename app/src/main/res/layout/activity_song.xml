<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".module.song.Activity.SongActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_default_song"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:alpha="0.5"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.65"
            android:background="@drawable/bg_default_song2"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    android:id="@+id/title"
                    layout="@layout/music_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/ll_info"
                android:layout_below="@+id/rl_title"
                android:paddingBottom="10dp">

                <com.newsuper.t.juejinbao.ui.song.view.LyricView
                    android:id="@+id/lrc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:current_color="#ffffff"
                    app:default_label="暂无歌词，我也不知道怎么上传OvO"
                    app:lrc_padding="@dimen/dp_10"
                    app:normal_color="#808080"
                    app:text_divider="@dimen/dp_15"
                    app:text_gravity="center"
                    app:text_size="@dimen/sp_18"
                    app:time_color="#c5c3c2"
                    app:time_text_size="@dimen/sp_13"
                    app:timeline_color="@color/white"
                    android:visibility="gone"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/iv_play_bg"
                android:layout_width="@dimen/ws250dp"
                android:layout_height="@dimen/ws250dp"
                android:background="@mipmap/ic_music_play_bg"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/iv_record"
                    android:layout_width="@dimen/ws160dp"
                    android:layout_height="@dimen/ws160dp"
                    android:src="@mipmap/ic_music_play_default"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_pointer"
                android:layout_width="@dimen/ws250dp"
                android:layout_height="@dimen/ws100dp"
                android:src="@mipmap/ic_music_play_pointer"
                android:layout_above="@+id/iv_play_bg"
                android:layout_marginBottom="-30dp"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/ll_seek"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:paddingStart="50dp"
                android:paddingEnd="50dp">

                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_collection" />


                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_add"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_music_add" />



                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_music_share" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_seek"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_above="@id/ll_bottom">

                <TextView
                    android:layout_marginLeft="40dp"
                    android:text="00:14"
                    android:id="@+id/tv_past_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />

                <android.support.v7.widget.AppCompatSeekBar
                    android:layout_toRightOf="@id/tv_past_time"
                    android:layout_toLeftOf="@id/total_time"
                    android:id="@+id/seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:max="100"
                    android:maxHeight="3dp"
                    android:minHeight="3dp"
                    android:progressDrawable="@drawable/seekbar_bg"
                    android:thumb="@drawable/seekbar_thumb" />

                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:text="04:14"
                    android:id="@+id/total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/iv_play_mode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_play_in_order" />

                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:alpha="0.2"
                        android:background="@drawable/bg_music_play_control"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        />
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/iv_pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_music_pre" />
                </FrameLayout>

                <FrameLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:alpha="0.2"
                        android:background="@drawable/bg_music_play_control"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        />
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/iv_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_music_pause" />
                </FrameLayout>

                <FrameLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:alpha="0.2"
                        android:background="@drawable/bg_music_play_control"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        />
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/iv_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_music_next" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/iv_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_music_play_list" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</layout>
