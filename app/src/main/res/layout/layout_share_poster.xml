<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_sleep_poster"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws0dp"
        android:layout_weight="1"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_invite_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_ffffff_solid_radius_10"
            android:paddingLeft="@dimen/ws10dp"
            android:paddingTop="@dimen/ws3dp"
            android:paddingRight="@dimen/ws10dp"
            android:paddingBottom="@dimen/ws3dp"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/ws18sp" />

        <ImageView
            android:id="@+id/iv_invite_qrcode"
            android:layout_width="@dimen/ws150dp"
            android:layout_height="@dimen/ws150dp"
            android:layout_marginTop="@dimen/ws10dp" />

    </LinearLayout>

</LinearLayout>
