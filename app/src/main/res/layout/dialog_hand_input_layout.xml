<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/dp_289"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_gray_r5">
        <FrameLayout
            android:background="@drawable/shape_auth_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_36"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_hand_input_code"
                android:textSize="@dimen/sp_18"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:scaleType="centerCrop"
                android:layout_gravity="right"
                android:src="@mipmap/ic_auth_delete"/>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_36"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_white_r3"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_13"
                android:src="@mipmap/ic_code_scan"
                android:scaleType="centerCrop"
                android:layout_marginLeft="@dimen/dp_7"/>
            <TextView
                android:id="@+id/tv_input"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_2F2F2F"
                android:layout_marginLeft="@dimen/dp_4"
                android:hint="@string/txt_input_produce_code"/>
            <ImageView
                android:id="@+id/iv_clear"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:src="@mipmap/ic_clear_edit"
                android:scaleType="centerCrop"
                android:layout_marginRight="@dimen/dp_6"/>
        </LinearLayout>

        <com.newsuper.t.sale.view.HandInputKeyboardView
            android:id="@+id/input_keyboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginBottom="@dimen/dp_14"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
