<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:background="#000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/guide_text_setting_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ws40dp"
            />

        <ImageView
            android:id="@+id/iv_line"
            android:layout_toLeftOf="@id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/guide_text_setting_line"
            android:layout_marginTop="@dimen/ws35dp"
            />

        <RelativeLayout
            android:id="@+id/iv_desc"
            android:layout_below="@id/iv_line"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/guide_text_setting_desc"
            android:layout_marginTop="@dimen/ws20dp">

            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击这里可以设置字体大小哦"
                android:textSize="17dp"
                android:textColor="#ffffff"
                />

        </RelativeLayout>



        <RelativeLayout
            android:layout_below="@id/iv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ws60dp"
            android:background="@mipmap/guide_text_setting_btn">

        <TextView
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="25dp"
            android:paddingRight="27dp"
            android:layout_centerInParent="true"
            android:id="@+id/confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="知道啦!"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:background="@drawable/guide_btn_bg"
            />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>