<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/smallLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvRecommend">

            <com.juejinchain.android.view.LoadingView
                android:id="@+id/loading_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/nest_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.youth.banner.Banner
                            app:banner_default_image="@mipmap/bg_banner_def"

                            android:id="@+id/banner"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/ws200dp"
                            app:indicator_drawable_selected="@mipmap/vp_seleced_point"/>

                        <LinearLayout
                            android:visibility="gone"
                            android:paddingTop="@dimen/ws5dp"
                            android:orientation="horizontal"
                            android:id="@+id/tab_layout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/ws45dp">
                            <LinearLayout
                                android:gravity="bottom|center_horizontal"
                                android:id="@+id/tab_1"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:textSize="@dimen/ws18dp"
                                    android:id="@+id/tv_1"
                                    android:textColor="@color/c_FF5500"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="全部"
                                    />
                                <View
                                    android:id="@+id/indicator_1"
                                    android:layout_marginTop="@dimen/ws5dp"
                                    android:background="@color/c_FF5500"
                                    android:layout_width="@dimen/ws30dp"
                                    android:layout_height="@dimen/ws2dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="bottom|center_horizontal"
                                android:id="@+id/tab_2"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:textSize="@dimen/ws18dp"
                                    android:id="@+id/tv_2"
                                    android:textColor="@color/c_333333"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="文章"
                                    />
                                <View
                                    android:id="@+id/indicator_2"
                                    android:visibility="invisible"
                                    android:layout_marginTop="@dimen/ws5dp"
                                    android:background="@color/c_FF5500"
                                    android:layout_width="@dimen/ws30dp"
                                    android:layout_height="@dimen/ws2dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="bottom|center_horizontal"
                                android:id="@+id/tab_3"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:textSize="@dimen/ws18dp"
                                    android:id="@+id/tv_3"
                                    android:textColor="@color/c_333333"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="公告"
                                    />
                                <View
                                    android:id="@+id/indicator_3"
                                    android:visibility="invisible"
                                    android:layout_marginTop="@dimen/ws5dp"
                                    android:background="@color/c_FF5500"
                                    android:layout_width="@dimen/ws30dp"
                                    android:layout_height="@dimen/ws2dp"/>
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:visibility="gone"
                            android:id="@+id/divider"
                            android:background="@color/line_color"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <com.juejinchain.android.view.LoadingView
                            android:id="@+id/rv_loading"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recy"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scrollbars="vertical">

                            </android.support.v7.widget.RecyclerView>

                        </com.juejinchain.android.view.LoadingView>

                    </LinearLayout>

                </android.support.v4.widget.NestedScrollView>

            </com.juejinchain.android.view.LoadingView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <TextView
            android:id="@+id/tvRecommend"
            style="@style/JJ.WidthFill"
            android:background="#D4E8F6"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="掘金宝推荐引擎有1条更新"
            android:textColor="#2F99D9"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="@dimen/ws97dp"
            android:layout_height="@dimen/ws31dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_left_15"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_notice"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐藏公告"
                android:layout_marginStart="@dimen/ws4dp"
                android:textColor="@color/white"
                android:textSize="@dimen/ws15sp"
                android:id="@+id/tv_search"/>

        </LinearLayout>

    </RelativeLayout>
</layout>
