<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.transpos.market.view.VerticalVipTabView
        android:id="@+id/tab"
        android:layout_width="@dimen/dp_49"
        android:layout_height="@dimen/dp_299"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/line"
        android:layout_width="@dimen/dp_5"
        android:layout_height="match_parent"
        android:background="@color/color_F7F8FA"
        app:layout_constraintLeft_toRightOf="@id/tab"/>
    <FrameLayout
        android:id="@+id/fl_child_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/line"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>