                </RelativeLayout>

                <com.flyco.tablayout.SlidingTabLayout
                    android:id="@+id/activity_home_page_table"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ws40dp"
                    android:layout_toLeftOf="@id/rl_add"

                    app:tl_indicator_width="15dp"
                    app:tl_indicator_corner_radius="@dimen/ws2dp"
                    app:tl_tab_padding="@dimen/ws15dp"
                    app:tl_textBold="SELECT"
                    app:tl_textSelectColor="@color/app_white"
                    app:tl_textUnselectColor="@color/app_white"
                    app:tl_textsize="18dp" />
            </RelativeLayout>

