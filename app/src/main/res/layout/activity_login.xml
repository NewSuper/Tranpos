<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            android:id="@+id/activity_login_bar"
            layout="@layout/module_include_title_bar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws0_5dp"
            android:layout_below="@+id/activity_login_bar"
            android:background="@color/c_cccccc" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_login_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ws37_5dp"
            android:gravity="center_vertical"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_login_logo" />

            <TextView
                android:id="@+id/activity_login_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ws9dp"
                android:text="短信验证登录/注册"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/ws23dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_login_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ws86_5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_login_sms_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_agree_to_a_deal"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/ws14dp" />

            <TextView
                android:id="@+id/login_use_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用协议"
                android:textColor="@color/c_FF9900"
                android:textSize="@dimen/ws14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 和 "
                android:textColor="@color/c_999999"
                android:textSize="@dimen/ws14dp" />

            <TextView
                android:id="@+id/login_sms_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐私政策"
                android:textColor="@color/c_FF9900"
                android:textSize="@dimen/ws14dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/activity_login_edit_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws50dp"
            android:layout_below="@+id/activity_login_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/ws32dp"
            android:layout_marginTop="@dimen/ws132dp"
            android:layout_marginRight="@dimen/ws32dp"
            android:background="@null"
            android:hint="@string/login_edt_phone"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="@dimen/ws9dp"
            android:singleLine="true"
            android:textColor="@color/c_333333"
            android:textColorHint="@color/c_B2B2B2"
            android:textSize="@dimen/ws16dp" />

        <ImageView
            android:id="@+id/activity_login_edit_phone_clean"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ws50dp"
            android:layout_below="@+id/activity_login_bar"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/ws132dp"
            android:layout_marginRight="@dimen/ws18dp"
            android:paddingLeft="@dimen/ws15dp"
            android:paddingRight="@dimen/ws15dp"
            android:src="@mipmap/icon_login_clean"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws0_5dp"
            android:layout_below="@+id/activity_login_edit_phone"
            android:layout_marginLeft="@dimen/ws32dp"
            android:layout_marginRight="@dimen/ws32dp"
            android:background="@color/c_cccccc" />

        <LinearLayout
            android:id="@+id/activity_login_edit_phone_code_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_login_bar"
            android:layout_marginTop="@dimen/ws196dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ws50dp"
                android:layout_marginLeft="@dimen/ws32dp"
                android:layout_marginRight="@dimen/ws32dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/activity_login_edit_phone_code"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/ws50dp"
                    android:layout_weight="0.6"
                    android:background="@null"
                    android:hint="@string/login_edt_phone_code"
                    android:paddingLeft="@dimen/ws9dp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/c_333333"
                    android:textColorHint="@color/c_B2B2B2"
                    android:textSize="@dimen/ws16dp" />

                <View
                    android:layout_width="@dimen/ws0_5dp"
                    android:layout_height="@dimen/ws35dp"
                    android:background="@color/c_cccccc" />

                <TextView
                    android:id="@+id/activity_login_get_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/c_ED6B2C"
                    android:textSize="@dimen/ws16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ws0_5dp"
                android:layout_below="@+id/activity_login_edit_phone"
                android:layout_marginLeft="@dimen/ws32dp"
                android:layout_marginRight="@dimen/ws32dp"
                android:background="@color/c_cccccc" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/activity_login_edit_psw_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_login_bar"
            android:layout_marginTop="@dimen/ws196dp"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/activity_login_edit_psw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ws50dp"
                android:layout_marginLeft="@dimen/ws32dp"
                android:layout_marginRight="@dimen/ws32dp"
                android:background="@null"
                android:hint="@string/login_edt_phone_psw"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/ws9dp"
                android:singleLine="true"
                android:textColor="@color/c_333333"
                android:textColorHint="@color/c_B2B2B2"
                android:textSize="@dimen/ws16dp" />

            <ImageView
                android:id="@+id/activity_login_edit_psw_clean"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ws50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ws18dp"
                android:paddingLeft="@dimen/ws15dp"
                android:paddingRight="@dimen/ws15dp"
                android:src="@mipmap/icon_login_clean"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ws0_5dp"
                android:layout_below="@+id/activity_login_edit_psw"
                android:layout_marginLeft="@dimen/ws32dp"
                android:layout_marginRight="@dimen/ws32dp"
                android:background="@color/c_cccccc" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_login_bar"
            android:layout_marginTop="@dimen/ws245dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/activity_login_to_phone_psw_login_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ws13dp">

                <TextView
                    android:id="@+id/activity_login_to_phone_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ws43dp"
                    android:paddingTop="@dimen/ws14dp"
                    android:text="账号密码登录"
                    android:textColor="@color/c_FF9900"
                    android:textSize="@dimen/ws13dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/activity_login_phone_msg_code"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/ws15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/ws41dp"
                    android:text="收不到验证码？"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/ws13dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/activity_login_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ws47dp"
                android:layout_marginLeft="@dimen/ws32dp"
                android:layout_marginTop="@dimen/ws16dp"
                android:layout_marginRight="@dimen/ws32dp"
                android:background="@drawable/shap_bg_50ed6b2c_round_100"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/login_confirm_login"
                android:textColor="@color/white"
                android:textSize="@dimen/ws17dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_login_to_psw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws47dp"
            android:layout_below="@+id/activity_login_bar"
            android:layout_marginLeft="@dimen/ws32dp"
            android:layout_marginTop="@dimen/ws349dp"
            android:layout_marginRight="@dimen/ws32dp"
            android:background="@drawable/shap_line_ff3300_round_100"
            android:gravity="center"
            android:text="账号密码登录"
            android:textColor="@color/white"
            android:textSize="@dimen/ws17dp" />

        <RelativeLayout
            android:id="@+id/activity_login_to_phone_code_login_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_login_bar"
            android:layout_marginTop="@dimen/ws329dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/activity_login_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ws33dp"
                android:paddingTop="@dimen/ws18dp"
                android:paddingBottom="@dimen/ws18dp"
                android:text="短信验证码登录"
                android:textColor="@color/c_333333"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/activity_login_forget_psw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/ws33dp"
                android:paddingTop="@dimen/ws18dp"
                android:paddingBottom="@dimen/ws18dp"
                android:text="忘记密码？"
                android:textColor="@color/c_333333"
                android:textSize="13dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/ws32dp"
            android:layout_marginRight="@dimen/ws30dp"
            android:layout_marginBottom="@dimen/ws93dp">

            <View
                android:layout_width="@dimen/ws100dp"
                android:layout_height="@dimen/ws1dp"
                android:layout_centerVertical="true"
                android:background="@color/c_cccccc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="其他登录方式"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/ws14dp" />

            <View
                android:layout_width="@dimen/ws100dp"
                android:layout_height="@dimen/ws1dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/c_cccccc" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/ws14dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_login_weixin"
                android:layout_width="@dimen/ws0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/icon_login_wx"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/activity_login_qq"
                android:layout_width="@dimen/ws0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/icon_login_qq" />

            <ImageView
                android:id="@+id/activity_login_sina"
                android:layout_width="@dimen/ws0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/icon_login_sina"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/activity_login_dding"
                android:layout_width="@dimen/ws0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/umeng_socialize_ding"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/loading_progressbar_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/activity_login_bar"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="@dimen/ws50dp"
                android:layout_height="@dimen/ws50dp"
                android:layout_centerInParent="true"
                android:indeterminateDrawable="@drawable/loading_login_black" />
        </LinearLayout>


    </RelativeLayout>

</layout>
