<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws50dp">

        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="@dimen/ws25dp"
            android:layout_height="@dimen/ws25dp"
            android:textSize="@dimen/app_text"
            android:text="3"
            android:gravity="center"
            android:layout_marginLeft="@dimen/ws20dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_toRightOf="@id/tv_rank"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_text"
            android:textColor="@color/app_text"
            android:text="爱宠大机密2"
            android:layout_marginLeft="@dimen/ws10dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_toRightOf="@id/tv_name"
            android:layout_marginLeft="@dimen/ws10dp"
            android:layout_centerVertical="true"
            android:id="@+id/ll_fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="@dimen/ws10dp"
                android:layout_height="@dimen/ws15dp"
                android:background="@mipmap/fire"/>
            <ImageView
                android:id="@+id/iv2"
                android:layout_marginLeft="@dimen/ws3dp"
                android:layout_width="@dimen/ws10dp"
                android:layout_height="@dimen/ws15dp"
                android:background="@mipmap/fire"/>
            <ImageView
                android:id="@+id/iv3"
                android:layout_marginLeft="@dimen/ws3dp"
                android:layout_width="@dimen/ws10dp"
                android:layout_height="@dimen/ws15dp"
                android:background="@mipmap/fire"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_text"
            android:text="99.4"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ws20dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>



</LinearLayout>
