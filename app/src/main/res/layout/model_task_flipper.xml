<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ws30dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/model_view_filpper_bg"
        android:layout_width="@dimen/ws23dp"
        android:layout_height="@dimen/ws23dp"
        android:layout_marginLeft="@dimen/ws7dp"
        android:layout_marginRight="@dimen/ws7dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/model_view_filpper_context"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="@dimen/ws12sp"
        android:layout_marginRight="@dimen/ws7dp"/>

</LinearLayout>

