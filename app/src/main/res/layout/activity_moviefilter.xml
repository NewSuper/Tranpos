<?xml version="1.0" encoding="utf-8"?>

<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <View
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws20dp" />

        <!--标题-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws50dp"
            android:background="@color/app_white">


            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="@dimen/ws40dp"
                android:layout_height="@dimen/ws40dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/ws8dp"
                    android:layout_height="@dimen/ws16dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/backblack" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="@dimen/ws200dp"
                android:lines="1"
                android:gravity="center"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="筛选"
                android:textColor="#333"
                android:textSize="@dimen/app_text" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#efefef"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_condition4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws35dp"
            android:layout_marginLeft="@dimen/ws10dp"
            android:layout_marginTop="@dimen/ws10dp"
            android:layout_marginRight="@dimen/ws10dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_condition1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws35dp"
            android:layout_marginLeft="@dimen/ws10dp"
            android:layout_marginRight="@dimen/ws10dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_condition2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws35dp"
            android:layout_marginLeft="@dimen/ws10dp"
            android:layout_marginRight="@dimen/ws10dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_condition3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws35dp"
            android:layout_marginLeft="@dimen/ws10dp"
            android:layout_marginRight="@dimen/ws10dp" />

        <!--内容-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/srl"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ws3dp"
                    android:layout_marginRight="@dimen/ws3dp" />

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>


            <RelativeLayout
                android:id="@+id/img_loading_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/img_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerInside" />
            </RelativeLayout>

            <!--blank-->
            <LinearLayout
                android:id="@+id/rl_blank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/blank" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ws10dp"
                    android:text="暂无相关资源"
                    android:textColor="@color/app_text3"
                    android:textSize="@dimen/app_text2" />


            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</layout>
