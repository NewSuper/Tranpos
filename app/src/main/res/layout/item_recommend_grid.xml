<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!--图片-->
            <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ws2dp"
                android:layout_marginRight="@dimen/ws2dp"
                android:paddingBottom="@dimen/ws50dp"
                android:scaleType="centerCrop"></ImageView>

            <!--评分-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ws30dp"
                android:layout_marginBottom="@dimen/ws50dp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ws5dp"
                    android:text="2019"
                    android:textColor="#fff"
                    android:textSize="@dimen/ws14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/ws5dp"

                    android:text="3.3"
                    android:textColor="#ff0000"
                    android:textSize="@dimen/ws14dp" />

            </RelativeLayout>


            <!--下部文本-->
            <LinearLayout
                android:id="@+id/rl_tt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ws50dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="樱兰高校男公关部"
                    android:textColor="#333"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/ws14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更新至01"
                    android:textColor="#999"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/ws12dp" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>