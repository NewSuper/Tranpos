<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="@dimen/ws20dp"
        android:layout_marginBottom="@dimen/ws8dp"
        android:layout_marginLeft="@dimen/ws15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:alpha="0.4"
            android:id="@+id/img_author"
            android:layout_width="@dimen/ws30dp"
            android:layout_height="@dimen/ws30dp"
            app:srcCompat="@mipmap/default_img" />
        <TextView
            android:id="@+id/tv_source"
            android:layout_marginLeft="@dimen/ws13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浙江卫视"
            android:textColor="@color/c_666666"
            />

    </LinearLayout>
    <android.support.constraint.ConstraintLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws200dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/img_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@mipmap/short_video_def" />

        <ImageView
            android:layout_width="@dimen/jz_start_button_w_h_normal"
            android:layout_height="@dimen/jz_start_button_w_h_normal"
            android:src="@drawable/jz_click_play_selector"
            app:layout_constraintBottom_toBottomOf="@+id/img_video"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_video" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_firsrt_title"
            android:paddingBottom="@dimen/ws10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingLeft="@dimen/ws10dp"
                android:paddingTop="@dimen/ws10dp"
                android:paddingRight="@dimen/ws10dp"
                android:text="TextView"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_readTimes"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/ws10dp"
            android:lines="1"
            android:paddingLeft="@dimen/ws10dp"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent" />


        <TextView
            android:id="@+id/tv_videoLength"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginEnd="@dimen/ws10dp"
            android:layout_marginRight="@dimen/ws10dp"
            android:layout_marginBottom="@dimen/ws10dp"
            android:background="@drawable/video_times_shape_without_stroke"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--<com.tencent.smtt.sdk.WebView
        有兼容问题, 只用于解析videoId-->

        <cn.jzvd.JzvdStd
            android:background="@color/black"
            android:id="@+id/jzvdPlayer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws200dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <!-- app:layout_constraintTop_toTopOf="@+id/img_video"
            app:layout_constraintBottom_toBottomOf="@+id/img_video"
            -->

    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:id="@+id/ll_video_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_give_like"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_give_like"
                android:textColor="@color/selecter_color_video_zan"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/selecter_zan"
                android:drawablePadding="@dimen/ws10dp"
                android:text="点赞"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl_comments"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/c_646464"
                android:id="@+id/tv_comment"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/ic_comment_dark"
                android:drawablePadding="@dimen/ws10dp"
                android:text="评论"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>
        <FrameLayout
            android:id="@+id/item_paager_share"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_share"
                android:textColor="@color/c_646464"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/ic_share_dark"
                android:drawablePadding="@dimen/ws10dp"
                android:text="分享"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>