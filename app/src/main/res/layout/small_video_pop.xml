<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/shape_white_radiu_top_10"
    android:orientation="vertical">


    <TextView
        android:id="@+id/pop_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws45dp"
        android:background="@drawable/shape_white_radiu_top_10"
        android:gravity="center"
        android:text="0条评论"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/ws16sp" />

    <ImageView
        android:id="@+id/pop_close"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ws45dp"
        android:paddingLeft="@dimen/ws14dp"
        android:paddingRight="@dimen/ws14dp"
        android:scaleType="center"
        android:src="@mipmap/icon_small_video_close" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ws0_5dp"
        android:layout_below="@id/pop_close"
        android:background="@color/line_color" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/small_video_pop_comments_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pop_close"
        android:layout_marginTop="@dimen/ws0_5dp">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/small_video_pop_comments_list_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/small_video_pop_comments_list"
        android:gravity="center"
        android:text="点击查看更多"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/ws14sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/small_video_pop_comments_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pop_close"
        android:layout_marginTop="@dimen/ws0_5dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/empty_small_video_comment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ws10dp"
            android:text="暂无相关评论~"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/ws13sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/model_activity_micro_video_edit_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/ws9dp">

        <EditText
            android:id="@+id/model_activity_micro_video_edit"
            style="@null"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws34dp"
            android:layout_marginLeft="@dimen/ws9dp"
            android:layout_marginRight="@dimen/ws61dp"
            android:background="@drawable/shap_line_cccccc_round_100"
            android:drawableLeft="@mipmap/icon_editor"
            android:drawablePadding="@dimen/ws7dp"
            android:gravity="center_vertical"
            android:hint="写评论..."
            android:paddingLeft="@dimen/ws11dp"
            android:textColor="@color/c_333333"
            android:textColorHint="@color/c_999999"
            android:textSize="@dimen/ws13sp" />

        <TextView
            android:id="@+id/small_video_pop_comments_commit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ws34dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="@dimen/ws15dp"
            android:text="发布"
            android:textColor="#D69308"
            android:textSize="@dimen/ws14sp" />
    </RelativeLayout>

</RelativeLayout>
