<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:overScrollMode="never"
    android:background="@color/white">
    <View
        android:id="@+id/vv_view_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1dp"
                android:divider="@color/white"/>
            <com.newsuper.t.consumer.widget.LocationAddressView
                android:id="@+id/address_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:visibility="invisible"/>
            <com.newsuper.t.consumer.widget.ShopScreenView
                android:id="@+id/shop_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_view"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rl_goods_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shop_screen"
                android:background="@color/white"
                android:visibility="gone"/>
            <!--<com.xunjoy.lewaimai.consumer.widget.ShopRadioView
                android:id="@+id/radioView_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_view"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/ll_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/radioView_main"
                android:background="@color/transparent"
                android:orientation="vertical"
                android:visibility="gone">

                <ListView
                    android:id="@+id/shop_type_listView"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@color/white"
                    android:divider="#E6E5E5"
                    android:dividerHeight="1dp"></ListView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ebebeb"/>
                <LinearLayout
                    android:id="@+id/ll_close"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical">
                    <View
                        android:layout_width="30dp"
                        android:layout_height="1.5dp"
                        android:background="@color/vv_line"/>
                    <View
                        android:layout_width="30dp"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/vv_line"/>
                </LinearLayout>

                <View
                    android:id="@+id/vv_touch"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:alpha="0.3"
                    android:background="@color/black"
                    android:visibility="visible" />
            </LinearLayout>-->
        </RelativeLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <LinearLayout
        android:id="@+id/ll_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vv_view_top"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/ll_load_fail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <include layout="@layout/layout_load_fail" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/ll_app_guoqi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="App已过期，暂无法使用"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/text_color_99"
                android:textSize="15sp"
                android:text="可联系App运营商处理相关问题"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:background="@color/theme_red"
                    android:gravity="center"
                    android:text="联系商家"
                    android:textSize="15sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_area_guoqi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_area_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="该商户分区功能已过期"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_refresh"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/theme_red"
                    android:gravity="center"
                    android:text="点击刷新"
                    android:textSize="15sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_location_fail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white_f5"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_gravity="center"
                android:src="@mipmap/pic_nolocation_2x"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/text_color_99"
                android:textSize="15sp"
                android:text="定位失败，请查看是否开启了手机定位或者选择手动搜索地址。"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_open"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:background="@color/theme_red"
                    android:layout_marginRight="40dp"
                    android:gravity="center"
                    android:text="开启定位"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:background="@color/theme_red"
                    android:gravity="center"
                    android:text="搜索地址"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_location_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="您所在的位置超出服务范围"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="150dp"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/text_color_99"
                android:textSize="15sp"
                android:text="建议您点击下方手动搜索地址\n或切换到此前常用的地址后再试试"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="149dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_wei_open_area"
                    android:gravity="center"
                    android:text="查看已开通区域"
                    android:textSize="15sp"
                    android:layout_marginRight="25dp"
                    android:textColor="#F87A7C" />
                <TextView
                    android:id="@+id/tv_search_2"
                    android:layout_width="149dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_wei_search"
                    android:gravity="center"
                    android:text="手动搜索地址"
                    android:textSize="15sp"
                    android:textColor="@color/white" />
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_area_join_application"
                android:layout_width="323dp"
                android:layout_height="45dp"
                android:background="@drawable/shape_wei_search"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginBottom="45dp"
                android:text="申请加盟"
                android:textSize="15sp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </FrameLayout>
    <com.newsuper.t.consumer.widget.LoadingAnimatorView
        android:id="@+id/load_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/vv_view_top"
        android:background="@color/white"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_cart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="20dp"
        android:visibility="invisible">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_shoppingcart2" />

        <TextView
            android:id="@+id/tv_cart_count"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/shape_top_cart"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>
