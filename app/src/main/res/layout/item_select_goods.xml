<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goods_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="18dp">
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@mipmap/store_logo_default"/>
            <TextView
                android:id="@+id/tv_huodong"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:background="@drawable/shape_goods_label"
                android:textColor="@color/white"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:gravity="center"
                android:textSize="9sp"
                android:text="活动"
                android:visibility="visible" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp">
            <RelativeLayout
                android:id="@+id/rl_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/text_color_33"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="商品"/>
                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvName"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/text_color_99"
                    android:textSize="12sp"
                    android:text="商品描述"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/ll_show_sales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_desc"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSaleCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/text_color_99"
                        android:textSize="12sp"
                        android:text="已售0"/>

                    <TextView
                        android:id="@+id/tvLimitTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品限购"
                        android:textColor="@color/tv_price_red"
                        android:textSize="12sp"
                        android:visibility="visible" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/ll_edit"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_below="@id/ll_show_sales">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_fuhao"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:gravity="bottom"
                            android:text="￥"
                            android:textColor="@color/tv_price_red"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:textColor="@color/tv_price_red"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="100"/>

                        <TextView
                            android:id="@+id/tvQi"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:gravity="bottom"
                            android:text="起"
                            android:textColor="#999999"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:gravity="bottom"
                            android:textColor="@color/text_color_99"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_old_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/text_color_99"
                            android:textSize="11sp"
                            android:text="90"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_limit_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:gravity="bottom"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:visibility="invisible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="非可售时间"
                            android:textColor="#999999"
                            android:textSize="11sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/icon_wenhao" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fl_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true">
                    <RelativeLayout
                        android:id="@+id/ll_edit_goods"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/llMinus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_alignParentLeft="true"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:background="@mipmap/button_minus" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:minWidth="10dp"
                            android:textColor="@color/text_color_33"
                            android:textSize="16sp"
                            android:text="1"/>

                        <LinearLayout
                            android:id="@+id/llAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="5dp"
                            android:clickable="true">
                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:background="@mipmap/button_add" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_select_nature"
                        android:layout_width="55dp"
                        android:layout_height="28dp"
                        android:layout_gravity="right|bottom"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:visibility="invisible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/shape_cart"
                            android:text="选规格"
                            android:textColor="#ffffff"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvShowCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/circle_red_kongxin"
                            android:gravity="center"
                            android:textColor="@color/theme_red"
                            android:textSize="12sp"
                            android:visibility="visible" />
                    </RelativeLayout>
                </FrameLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_show_vip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_info"
                android:layout_marginTop="4dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginBottom="2dp"
                    android:src="@mipmap/icon_vip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="会员价 "
                    android:textColor="#ff9027"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvVipPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ff9027"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvVipQi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起"
                    android:textColor="#999999"
                    android:textSize="10sp"
                    android:visibility="gone" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_show_vip"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_discount_2" />

                    <TextView
                        android:id="@+id/tv_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textColor="#ff9027"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_discount_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textColor="#ff9027"
                        android:textSize="12sp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_min_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#ff9027"
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    android:text="2份起购"
                    android:visibility="visible"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_sale_out"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/icon_sale_out"
        android:visibility="gone" />
</RelativeLayout>