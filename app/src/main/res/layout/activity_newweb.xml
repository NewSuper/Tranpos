<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <View
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws20dp"
            android:background="@color/app_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ws50dp"
            android:background="@color/app_color">


            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="@dimen/ws40dp"
                android:layout_height="@dimen/ws40dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/ws10dp"
                    android:layout_height="@dimen/ws20dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_back" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="@dimen/ws200dp"
                android:lines="1"
                android:gravity="center"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="标题"
                android:textColor="#fff"
                android:textSize="@dimen/app_text" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_webcontain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/tv_status">

            <!--<com.juejinchain.android.jsbridge.BridgeWebView-->

            <!--android:id="@+id/webView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->
        </LinearLayout>


    </LinearLayout>
</layout>
