<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/transparent">

    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/vg_cover"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="180dp"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/iv_item_vip_level_select"
            android:layout_width="70dp"
            android:layout_height="93dp"
            android:layout_marginTop="23dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/pic_vip_1"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/iv_item_vip_level_normal"
            android:layout_width="56dp"
            android:layout_height="80dp"
            android:layout_marginTop="33dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/pic_vip_2"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tv_item_vip_level_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            android:lines="1"
            android:ellipsize="end"
            android:text="超级会员"
            android:textSize="17sp"
            android:textColor="@color/text_color_33"/>
        <TextView
            android:id="@+id/tv_item_vip_level_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            android:lines="1"
            android:ellipsize="end"
            android:text="超级会员"
            android:textSize="14sp"
            android:textColor="#5B5B5B"/>
    </FrameLayout>
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>
</LinearLayout>