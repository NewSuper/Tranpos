<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fadingEdge="none"
    android:overScrollMode="never"
    android:background="#EBEBEB">
    <com.newsuper.t.consumer.widget.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">
    </com.newsuper.t.consumer.widget.CustomToolbar>
    <RelativeLayout
        android:id="@+id/rl_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:visibility="visible">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="40dp">

                <LinearLayout
                    android:id="@+id/ll_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioGroup
                        android:id="@+id/rg_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:visibility="visible">
                        <RadioButton
                            android:id="@+id/rb_shop_send"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:button="@null"
                            android:checked="true"
                            android:textColor="@drawable/selector_order_text"
                            android:background="@drawable/selector_order_list"
                            android:textSize="15dp"
                            android:text="外卖配送"/>
                        <RadioButton
                            android:id="@+id/rb_shop_take"
                            android:layout_width="90dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="-1dp"
                            android:gravity="center"
                            android:button="@null"
                            android:textColor="@drawable/selector_order_text"
                            android:background="@drawable/selector_order_list_right"
                            android:text="到店自取"
                            android:textSize="15dp"/>
                    </RadioGroup>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="15dp"
                        android:background="@mipmap/line_cart"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_add_address"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/white"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        android:textColor="@color/theme_red"
                        android:gravity="center"
                        android:text="+ 请添加收货地址"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_location" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:visibility="visible">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_address_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color_58"
                                android:textSize="14sp"
                                android:text="姓名"/>
                            <TextView
                                android:id="@+id/tv_address_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color_58"
                                android:layout_marginLeft="10dp"
                                android:textSize="14sp"
                                android:text="手机号码"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_address_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/text_color_58"
                            android:textSize="14sp"
                            android:text="详细地址"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_location" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_37"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:text="姓名:"/>
                        <EditText
                            android:id="@+id/edt_name"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:hint="请输入您的姓名"
                            android:textColorHint="@color/text_color_82"
                            android:paddingLeft="10dp"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_82"
                            android:background="@null"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EBEBEB"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/text_color_37"
                            android:textSize="14sp"
                            android:text="电话:"/>
                        <EditText
                            android:id="@+id/edt_phone"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center|left"
                            android:hint="请输入您的电话"
                            android:textColorHint="@color/text_color_82"
                            android:inputType="phone"
                            android:paddingLeft="10dp"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_82"
                            android:background="@null"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_send_time"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/white">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_time"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/text_color_37"
                        android:gravity="center"
                        android:text="送达时间"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"/>
                    <TextView
                        android:id="@+id/tv_send_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/theme_red"
                        android:gravity="center"
                        android:text="尽快送达"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/shop_right"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_take_time"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/white"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_time"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/text_color_37"
                        android:gravity="center"
                        android:text="自提时间"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"/>
                    <TextView
                        android:id="@+id/tv_take_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/theme_red"
                        android:gravity="center"
                        android:text=""/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/shop_right"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_pay"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_37"
                        android:gravity="center"
                        android:text="支付方式"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"/>
                    <TextView
                        android:id="@+id/tv_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/text_color_67"
                        android:gravity="center"
                        android:text="微信支付"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/shop_right"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/white">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/cart_store"/>
                    <TextView
                        android:id="@+id/tv_shop_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/text_color_37"
                        android:gravity="center|left"
                        android:text="店铺名称"/>
                    <TextView
                        android:id="@+id/tv_delivery_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:textColor="@color/text_color_67"
                        android:gravity="center"
                        android:text="配送模式"

                        />
                </LinearLayout>
                <com.newsuper.t.consumer.widget.ListViewForScrollView
                    android:id="@+id/listview_goods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/white"
                    android:dividerHeight="3dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <LinearLayout
                        android:id="@+id/ll_goods_total_price"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="1dp"
                        android:background="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_67"
                            android:gravity="center"
                            android:text="商品总价"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/tv_goods_total_price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/text_color_82"
                            android:gravity="center"
                            android:text="￥ 0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_food_box"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:background="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_67"
                            android:gravity="center"
                            android:text="餐盒费用"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/tv_box_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/text_color_82"
                            android:gravity="center"
                            android:text="￥ 0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_delivery"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:background="@color/white">
                        <TextView
                            android:id="@+id/tv_delivery"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_67"
                            android:gravity="center"
                            android:text="配送费"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/tv_delivery_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/text_color_82"
                            android:gravity="center"
                            android:text="￥ 0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_service"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:background="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_67"
                            android:gravity="center"
                            android:text="增值服务费"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/tv_service_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/text_color_82"
                            android:gravity="center"
                            android:text="￥ 0"/>
                    </LinearLayout>
                    <com.newsuper.t.consumer.widget.ListViewForScrollView
                        android:id="@+id/listview_yuse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.newsuper.t.consumer.widget.ListViewForScrollView
                        android:id="@+id/listview_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:orientation="vertical"
                    android:background="@color/white"
                    >
                    <View
                        android:id="@+id/vv_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:background="#EBEBEB"
                        />
                    <LinearLayout
                        android:id="@+id/ll_jian"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/jian" />
                        <TextView
                            android:id="@+id/tv_jian"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_67"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="满100减10元" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/tv_jian_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/cart_red"
                            android:gravity="center"
                            android:text="-￥ 0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_new_user"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/store_first_order" />
                        <TextView
                            android:id="@+id/tv_new"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_67"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="新用户下单立减20元" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/tv_new_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/cart_red"
                            android:gravity="center"
                            android:text="-￥ 0"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/zhe" />
                        <TextView
                            android:id="@+id/tv_vip"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_67"
                            android:gravity="center"
                            android:layout_marginLeft="5dp" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/tv_vip_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/cart_red"
                            android:gravity="center"
                            android:text="-￥ 10"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <LinearLayout
                        android:id="@+id/ll_coupon"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal"
                        android:background="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_67"
                            android:gravity="center"
                            android:text="优惠券"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/tv_coupon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="13sp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/cart_red"
                            android:gravity="center"
                            android:text="五张可用"/>
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/shop_right"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EBEBEB"
                        android:layout_marginLeft="15dp"
                        />
                    <LinearLayout
                        android:id="@+id/ll_price"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal"
                        android:background="@color/white">
                        <TextView
                            android:id="@+id/tv_total_price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="13sp"
                            android:textColor="@color/text_color_67"
                            android:gravity="center"
                            android:text="总价￥100"/>
                        <TextView
                            android:id="@+id/tv_coupon_price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="13sp"
                            android:textColor="@color/text_color_67"
                            android:gravity="center" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="13sp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/text_color_37"
                            android:gravity="center"
                            android:text="待支付"/>
                        <TextView
                            android:id="@+id/tv_pay_price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="13sp"
                            android:layout_marginRight="5dp"
                            android:textColor="#E5787B"
                            android:gravity="center"
                            android:text="￥200"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="24dp"
                    android:background="@color/white">
                    <com.newsuper.t.consumer.widget.ListViewForScrollView
                        android:id="@+id/listview_preset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="#EBEBEB"
                        android:dividerHeight="1dp"
                        android:layout_marginLeft="15dp"/>

                    <View
                        android:id="@+id/vv_bei"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EBEBEB"
                        android:layout_marginLeft="15dp"
                        />
                    <LinearLayout
                        android:id="@+id/ll_beizhu"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:background="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="13sp"
                            android:textColor="@color/text_color_37"
                            android:gravity="center"
                            android:text="备注"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/tv_beizhu_value"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textSize="13sp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/text_color_99"
                            android:gravity="center|right"
                            android:hint="如：不要辣、送货上门"
                            android:text=""/>
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/shop_right"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_tip_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF8CA"
                android:orientation="horizontal"
                android:padding="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送至:"
                    android:textColor="@color/text_color_37"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_tip_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="XXXXXXX"
                    android:textColor="@color/text_color_82"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cart_bottom"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_total_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#212A33"
                        android:gravity="center"
                        android:paddingLeft="18dp"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_total_coupon"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="#212A33"
                        android:gravity="center|left"
                        android:textColor="@color/text_color_99"
                        android:textSize="13sp"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_to_pay"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/theme_red"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_load_fail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:visibility="gone">
        <include layout="@layout/layout_load_fail"/>
    </LinearLayout>
    <com.newsuper.t.consumer.widget.LoadingAnimatorView
        android:id="@+id/load_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/ll_order_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/shape_cart_order_tip"
        android:layout_marginTop="-40dp"
        android:layout_centerHorizontal="true"
        android:visibility="visible">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_clock_2x"/>
        <TextView
            android:id="@+id/tv_order_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="现在预定，明天准时送达"/>
    </LinearLayout>

</RelativeLayout>
